<h1 style="text-align:center;margin:0 auto;"> <%= @project.name %> </h1>
<h2 style="text-align:center;margin:5px auto;"> Tasks </h2>

<% if @connect_user %>
	<div>Want to view and/or edit these tasks? <%= link_to "Sign up", register_connect_url(:host => "www.buildhawk.com"), :style=> "color:#0800ff" %> for BuildHawk.</div>
<% end %>
<% @item_array.each do |item| %>
	<div style="width:100%;clear:both;">
		<% if item.photos && item.photos.count > 0 && item.photos.first.image_file_name %>
			<% photo = item.photos.first %>
			<%= link_to edit_worklist_item_url(item, :project_id => @project.id, :host => "www.buildhawk.com"), :style=>"float:left;margin:0 10px 10px 0;" do %>
				<%= image_tag(photo.image.url(:small), :style => "width:100px;display:block;") %> 
			<% end %>
		<% else %>
			<div style="float:left;margin:0 10px 10px 0;background:#eee;line-height:100px;height:100px;width:100px;text-align:center;vertical-align:middle;color:#aaa;">No photo</div>
		<% end %>

		<span style="font-size:16px;"><%= link_to item.body, edit_worklist_item_url(item, :project_id => @project.id, :host => "www.buildhawk.com"), :style=>"color:#000;text-decoration:none;" %></span>

		<% if item.assignee || item.sub_assignee || item.connect_assignee %>
			<div>
				<h4 style="display:inline-block;margin:10px auto 0;">Assigned:</h4>
				<span>
					<% if item.assignee %>
						<%= item.assignee.full_name %>
					<% elsif item.sub_assignee %>
						<%= item.sub_assignee.name %>
					<% elsif item.connect_assignee %>
						<%= item.connect_assignee.full_name %>
					<% end %>
				</span>
			</div>
		<% end %>
		<div><h4 style="display:inline-block;margin:0 auto;padding-right:2em;">Date:</h4><%= item.created_at.strftime("%b %e, %l:%M %p") %></div>
		
		<% if item.completed %>
			<div><h4 style="display:inline-block;margin:0 auto;padding-right:2em;">Status:</h4><span>Complete</span></div>
		<% else %>
			<div><h4 style="display:inline-block;margin:0 auto;padding-right:2em;">Status:</h4><span style="color:#cc0000;">IN PROGRESS</span></div>
		<% end %>
	</div>

<% end %>
