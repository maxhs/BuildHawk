<% unless @company.cards.count > 0 %>
	$('#alert').css({'color':'#fff','background':'#cc0000','border':'0'}).text("Please setup your billing preferences in order to create new projects").fadeIn(500).delay(4000).fadeOut(500, function(){
		$(this).css({'color':'#000','background':'#fff', 'border':'1px solid #eee'}).text("");
	});
<% end %>

$('#navigation a').removeClass('current-page');
$('#billing-link').addClass('current-page');
$('#main').html('<%= j render :partial => "index" %>');
$("html, body").animate({ scrollTop: 0 }, 0);