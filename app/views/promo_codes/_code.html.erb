<div id="code-<%=code.id%>" class="code row">
	<div class="col-xs-3"><%= code.code %></div>
	<div class="col-xs-2"><%= number_with_precision code.percentage, precision: 2 %>%</div>
	<div class="col-xs-1"><%= code.days %></div>
	<div class="col-xs-1"><%= code.use_count %></div>
	<div class="col-xs-5"><%= link_to "Edit", edit_promo_code_path(code), remote: true, :class=>"remote" %></div>
</div>