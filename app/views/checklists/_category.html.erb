<div class="category-form">
	<div class="row">
		<span class="col-md-5 header-description"><h2><%= @category.name %></h2></span>
	</div>
	<%= nested_form_for @category, :url => update_category_checklist_path(@category.checklist, :category_id => @category.id), :remote => true, :method => :patch do |f| %>
		<div class="row">
			<h4>Phase Name:</h4>
		</div>
		<div class="row">
			<%= f.text_field :name %>
		</div>
		<div class="row">
			<h4>Milestone Date:</h4>
		</div>
		<div class="input-append date" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
			<%= f.text_field :milestone_date, :value => parse_date(f.object.milestone_date), :placeholder => Time.now.strftime("%m/%d/%Y"), :class =>"date-input", :id => "dp" %>
			<span class="add-on"><i class="icon-th"></i></span>
		</div>

		<div><button class="btn btn-success btn-md pull-right"><%= f.submit "Update", :class => "no-link" %></button></div>
		<div style="padding-top:23px;clear:both;">
			<%= link_to "Delete", category_path(@category), :method => :delete, :class=>"pull-right delete-link", :data => {:confirm => "Are you sure you want to delete this phase?"}, :remote => true %>
		</div>

	<% end %>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		$("#dp").datepicker();
	});
</script>