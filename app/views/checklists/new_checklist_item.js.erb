$('#pages').fadeOut(170,function(){
	$(this).html('<%= j render :partial => "checklists/new_checklist_item", :locals => {:checklist_item => @checklist_item, :category_name => @category_name, :subcategory_name => @subcategory.name, :checklist => @checklist} %>');
	$(this).fadeIn(170);
	$("html, body").animate({ scrollTop: 0 }, 300);
});