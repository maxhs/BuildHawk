
<%= nested_form_for @checklist_item, :url => create_checklist_item_checklist_path(@checklist), :remote => true, :method => :post do |f| %>
	<%= f.hidden_field :subcategory_id, :value => @subcategory.id %>
	<%= f.hidden_field :checklist_id, :value => @checklist.id %>
	<%= f.hidden_field :order_index, :value => @item_index.to_i + 1%>
	<%= f.hidden_field :item_index, :value => @item_index.to_i + 1 %>

	<div class="row">
		<div class="col-xs-10"><%= f.text_area :body, :placeholder => "Describe the new checklist item" %></div>
		<div class="col-xs-1"><%= f.label "Item Type" %><%= f.select :item_type, @checklist_item.types %></div>
		<button class="btn btn-success btn-md pull-right col-xs-1"><%= f.submit "Add", :class => "no-link", :style=>"margin:0 auto;" %></button>
	</div>

<% end %>
