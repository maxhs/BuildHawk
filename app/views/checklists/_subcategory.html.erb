
<div class="category-form container">
	<div class="row">
		<span class="col-xs-5 header-description"><h2><%= @subcategory.name %></h2></span>
	</div>
	<%= nested_form_for @subcategory, :url => update_subcategory_checklist_path(@subcategory.category.checklist, :subcategory_id => @subcategory.id), :remote => true, :method => :patch do |f| %>
		<div class="row">
			<h4 style="display:inline-block">Category Name:</h4>
			<%= f.text_field :name %>
		</div>
		<div class="row">
			<div class="col-xs-6">
				<h4 style="text-align:center;">Milestone Date:</h4>
				<div class="input-append date" data-date-format="dd-mm-yyyy">
					<%= f.text_field :milestone_date, :value => parse_date(f.object.milestone_date), :placeholder => Time.now.strftime("%m/%d/%Y"), :class =>"date-input", :id => "dp" %>
					<div id="clear-critical-date"> Clear Date</div>
				</div>
			</div>
			<% if current_user.admin? || current_user.uber_admin? %>
				<div class="col-xs-6">
					<h4 style="text-align:center;">Completion Date:</h4>
					<div class="input-append date" data-date-format="dd-mm-yyyy">
						<%= f.text_field :completed_date, :value => parse_date(f.object.completed_date), :placeholder => Time.now.strftime("%m/%d/%Y"), :class =>"date-input", :id => "dp-completed" %>
						<div id="clear-completed-date"> Clear Date</div>
					</div>
				</div>
			<% end %>
		</div>

		<div class="button-container">
			<%= f.submit "Update", :class => "no-link btn btn-success btn-md" %>
		<% end %>
			<div style="">
				<%= link_to "Delete", destroy_subcategory_checklist_path(@subcategory.category.checklist, :subcategory_id => @subcategory), :method => :delete, :data => {:confirm => "Are you sure you want to delete this category?"}, :class=>"btn btn-danger btn-md delete-link", :remote => true %>
			</div>
		</div>
	
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$("#dp,#dp-completed").datepicker();		
		$('#clear-critical-date').on('click',function(){
			$('#dp').val('');
		});
		$('#clear-completed-date').on('click',function(){
			$('#dp-completed').val('');
		});
	});
</script>