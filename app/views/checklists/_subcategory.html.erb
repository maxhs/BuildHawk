
<div class="category-form container">
	<div class="row">
		<span class="col-xs-5 header-description"><h2><%= @subcategory.category.name %></h2></span>
	</div>
	<%= nested_form_for @subcategory, :url => update_subcategory_checklist_path(@subcategory.category.checklist, :subcategory_id => @subcategory.id), :remote => true, :method => :patch do |f| %>
		<div class="row">
			<h4 style="display:inline-block">Category Name</h4>
			<%= f.text_field :name %>
		</div>

		<div class="button-container">
			<%= f.submit "Update", :class => "no-link btn btn-success btn-md save" %>
		<% end %>
			<div style="">
				<%= link_to "Delete", destroy_subcategory_checklist_path(@subcategory.category.checklist, :subcategory_id => @subcategory), :method => :delete, :data => {:confirm => "Are you sure you want to delete this category?"}, :class=>"btn btn-danger btn-md delete-link", :remote => true %>
			</div>
		</div>
	
</div>
