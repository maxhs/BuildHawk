<body>
	<p class="notice" id="notice"><%= notice %></p>
    <p class="alert" id="alert"><%= alert %></p>

    <div id="wrap">
		<div class="navbar navbar-fixed-top" id="top-nav">
		
				<a class="logo" href="/" data-remote="true"><%= image_tag('logo.png') %></a>

				<ul id="navigation">
					<% if current_page?(root_url) && !user_signed_in? %>
						
						<li class="nav-contact" id="nav-contact"><%= link_to 'Contact', "#contact" %></li>
						<li class="nav-pricing" id="nav-pricing"><%= link_to 'Pricing', "#pricing" %></li>
						<li class="nav-about" id="nav-about"><%= link_to 'About', "#about" %></li>
						<li style="position:absolute;right:0;"><%= link_to 'Beta Login', login_path %></li>
					<% elsif user_signed_in? && params[:controller] == "projects" %>

						<%= render partial: "layouts/internal_nav" %>
					<% elsif user_signed_in? && params[:controller] == "admin" %>

						<%= render partial: "admin/top_nav" %>
					<% elsif user_signed_in? && @project %>
						<%= render partial: "projects/project_nav" %>
					<% end %>
				</ul>
			</div>
		
		
		<% if user_signed_in? %>
			<div id="pagescontainer">
				<%= yield %>
			</div>
				
		<% else %>
			<%= yield %>
		<% end %>

		<div id="push"></div>
	</div>

<% if user_signed_in? %>
	<div id="projects-tab">Projects</div>
	<nav id="bt-menu" class="bt-menu">
	
		<% if current_user.admin? || current_user.company_admin? %>
		<ul id="internal-nav">
			<li><%= link_to "Admin", admin_index_path, remote: true %></li>
			<% if current_user.uber_admin? %>
				<li><%= link_to "Uber Admin", uber_admin_index_path, remote: true %></li>
			<% end %>
		</ul>
		<% end %>
	<% end %>
	<ul id="credentials">
		<% if user_signed_in? %>
			<li>
				<%= link_to current_user.full_name, edit_user_path(current_user), :id => "settings-link", :class=>"font-smoothing", :remote => true %>
			</li>
		<% else %>
			<li><%= link_to "Beta Login", login_path, :style=>"padding-top:6px;" %>
		<% end %>
	</ul>
	<% if @projects %><%= render partial: "projects/sidebar" %><% end %>
</nav>

<footer>
	<div id="container">
		<ul>
			<li><a href="http://blog.buildhawk.com" target="_blank" >Blog</a></li>
			<li><a href="#contact">Contact</a></li>
		</ul>
		<ul>
			<li><a href="/terms">Terms of Service</a></li>
			<li><a href="/privacy">Privacy Policy</a></li>
		</ul>
		<div id="copyright">&copy; BuildHawk, 2013</div>
	</div>
</footer>

<script type="text/javascript">
	$(document).ready(function() {
		$.ajaxSetup({ cache: false });
		datetimepickers();
		<% if user_signed_in? %>sideMenu();<% end %>
	});

</script>
</body>
</html>
