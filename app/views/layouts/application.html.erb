<body>
	<p class="notice" id="notice"><%= notice %></p>
    <p class="alert" id="alert"><%= alert %></p>

    <div id="wrap">
		<div class="navbar navbar-fixed-top" id="top-nav">
			<div class="container">
				<ul class="nav navbar-nav">
					<li><a class="navbar-brand" href="/" data-remote='true'><%= image_tag('logo.png') %></a></li>
					<% if user_signed_in? %>
						<li class="nav-projects" id="nav-projects"><%= link_to "Projects", projects_path, :class=>"current-page", :remote => true %></li>
						<% if current_user.admin %>
							<li class="nav-admin" id="nav-admin"><%= link_to "Admin", admin_index_path, :remote => true %></li> 
						<% end %>
						<% if current_user.uber_admin %>
							<li class="nav-uber-admin" id="nav-uber-admin"><%= link_to "Uber Admin", uber_admin_index_path, :remote => true %></li> 
						<% end %>
					<% end %>
					<% if current_page?(root_url) %>
						<li class="nav-contact" id="nav-contact"><%= link_to 'Contact', "#contact" %></li>
						<li class="nav-pricing" id="nav-pricing"><%= link_to 'Pricing', "#pricing" %></li>
						<li class="nav-about" id="nav-about"><%= link_to 'About', "#about" %></li>
					<% end %>
				</ul>
				<ul class="nav navbar-nav pull-right">
					<% if user_signed_in? %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span><%=current_user.full_name%></span> <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "My Settings", edit_user_path(current_user), :id => "settings-link", :remote => true %></li>
								<li><%= link_to "Logout", logout_path %></li>
							</ul>
						</li>
					<% else %>
						<li><%= link_to "Beta Login", login_path %>
					<% end %>
				</ul>
			</div>
		</div>
	<% if user_signed_in? %>
		<div id="pagescontainer" class="container">
			<%= yield %>
		</div>
	</div>
			
	<% else %>
		<%= yield %>
	<% end %>

	<div id="push"></div>
</div>

<footer>
	<div id="container">
		<ul>
			<li><a href="http://blog.buildhawk.com" target="_blank" >Blog</a></li>
			<li><a href="#contact">Contact</a></li>
		</ul>
		<ul>
			<li><a href="/terms">Terms of Service</a></li>
			<li><a href="/privacy">Privacy Policy</a></li>
		</ul>
		<div id="copyright">&copy; BuildHawk, 2013</div>
	</div>
</footer>

<script type="text/javascript">
	$(document).ready(function() {
		$.ajaxSetup({ cache: false });
	});
</script>
