<!DOCTYPE html>
<html>
<head>
  <title>Buildhawk</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div id="wrap">
			<!-- Fixed navbar -->
			<div class="navbar navbar-fixed-top" style="min-height: 50px;">
				<div class="container">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						</button>
						<a class="navbar-brand" href="/"><%= image_tag('logo.png') %></a>
					</div>
					
					<div class="collapse navbar-collapse">
						<ul class="nav navbar-nav">
							<% if user_signed_in? %>
								<li class="nav-projects"><%= link_to "Projects", projects_path %></li>
								<li class="nav-admin" data-jgs-show="user.permissions.admin_company"><a href="/users">Admin</a></li>
							<% end %>
						</ul>
						<ul class="nav navbar-nav pull-right">
							<% if user_signed_in? %>
								<li class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span data-jgs-text="data.fullname"></span> <b class="caret"></b></a>
									<ul class="dropdown-menu">
										<li><a href="/user/me">My Settings</a></li>
										<li><a href="/api/v1/logout">Logout</a></li>
									</ul>
								</li>
							<% else %>
								<li><%= link_to "Beta Login", login_path %>
							<% end %>
						</ul>
					</div><!--/.nav-collapse -->
				</div>
			</div>

		<%= yield %>
	
	</div>
</body>
</html>
