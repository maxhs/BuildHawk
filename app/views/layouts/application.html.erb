<body>
	<p class="notice" id="notice"><%= notice %></p>
    <p class="alert" id="alert"><%= alert %></p>

    <div id="wrap">
		<div class="navbar navbar-fixed-top <% if !user_signed_in? && (current_page?(root_url) || current_page?(login_path) )%>splash<% end %>" id="top-nav">
			<ul id="navigation">
				<% if !user_signed_in? %>
					<li class="logo"><a href="/"><%= image_tag('logo.png') %></a></li>
					<li class="nav-contact" id="nav-contact"><%= link_to 'Contact', "#contact" %></li>
					<li class="nav-pricing" id="nav-pricing"><%= link_to 'Pricing', "#pricing" %></li>
					<li class="nav-about" id="nav-about"><%= link_to 'About', "#about" %></li>
					<li style=""><%= link_to 'Login', login_path, :style => "float:right;" %></li>
				<% elsif params[:controller] == "admin" %>
					<%= render partial: "admin/top_nav" %>
				<% elsif params[:controller] == "uber_admin" %>
					<%= render partial: "uber_admin/top_nav" %>
				<% elsif @project %>
					<%= render partial: "projects/project_nav" %>
				<% elsif user_signed_in? %>
					<%= render partial: "layouts/internal_nav" %>
				<% end %>
			</ul>
		</div>
		
		<% if user_signed_in? %>
			<div id="inner-wrap">
				<%= yield %>
			</div>
				
		<% else %>
			<%= yield %>
		<% end %>
		<div id="push"></div>
	</div>

<% if user_signed_in? %>
	<div id="projects-tab">Projects</div>
	<nav id="bh-menu" class="bh-menu">
	
		<% if current_user.admin? || current_user.company_admin? %>
		<ul id="internal-nav">
			<li><%= link_to "Admin", admin_index_path, remote: true %></li>
			<% if current_user.uber_admin? %>
				<li><%= link_to "Uber Admin", uber_admin_index_path, remote: true %></li>
			<% end %>
			<li><%= link_to "Messages", messages_path, remote:true %></li>
		</ul>
		<% end %>
	<% end %>
	<ul id="credentials">
		<% if user_signed_in? %>
			<li>
				<%= link_to current_user.full_name, edit_user_path(current_user), :id => "settings-link", :class=>"font-smoothing", :remote => true %>
			</li>
		<% end %>
	</ul>
	<% if @projects %><%= render partial: "projects/sidebar" %><% end %>
</nav>

<footer>
	<div id="container">
		<ul>
			<li><a href="http://blog.buildhawk.com" target="_blank" >Blog</a></li>
			<li><%= mail_to "contact@buildhawk.com", "Contact", encode: "javascript", :id => "contact-link" %></li>
		</ul>
		<ul>
			<li><a href="/terms">Terms of Service</a></li>
			<li><a href="/privacy">Privacy Policy</a></li>
		</ul>
		<div id="copyright">&copy; 2014 BuildHawk Inc</div>
	</div>
</footer>

<script type="text/javascript">
	$(document).ready(function() {
		$.ajaxSetup({ cache: false });
		datetimepickers();
		<% if user_signed_in? %>sideMenu();<% end %>
	});

</script>
</body>
</html>
