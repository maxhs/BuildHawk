	    Shadowbox.init({
	    	skipSetup:true,
	    	onOpen:function(){
	    		$('#top-nav').css('opacity','.1');
	    	},
	    	onClose:function(){
	    		$('#top-nav').css('opacity','1');}
	    })
		window.Dropzone;
		
	</script>
