<body>
	<p class="notice" id="notice"><%= notice %></p>
    <p class="alert" id="alert"><%= alert %></p>

    <div id="wrap">

    	<% if user_signed_in? %>
			<nav id="main-sidebar">
				<div id="settings-row">
					<a href="/"><%= image_tag 'logo.png', id: "logo" %></a>
				</div>
				
				<% if @projects %>
					<%= render partial: "projects/sidebar" %>
				<% end %>
				
				<div id="bottom-menu">
					<div>
						<%= link_to image_tag('settings.png', id: "settings"),edit_user_path(current_user), remote:true %>
					</div>
					<div>
						<% if current_user.any_admin? %>
							<h5><%= link_to "Admin", admin_index_path, id:"admin-link", remote: true %></h5>
						<% end %>
						<% if current_user.uber_admin? %>
							<h5><%= link_to "Uber Admin", uber_admin_index_path, id:"uber-admin-link", remote: true %></h5>
						<% end %>
					</div>
				</div>
			</nav>
		<% end %>

		<div class="navbar navbar-fixed-top <% if !user_signed_in? && (current_page?(root_url) || current_page?(login_path) )%>splash<% end %>" id="top-nav">
			<ul id="navigation">
				<% if !user_signed_in? %>
					
					<% if current_page?(root_url) %>
						<li class="nav-contact" id="nav-contact"><%= link_to 'Contact', "#contact" %></li>
						<li class="nav-pricing" id="nav-pricing"><%= link_to 'Pricing', "#pricing" %></li>
						<li class="nav-about" id="nav-about"><%= link_to 'About', "#about" %></li>
					<% else %>
						<li class="nav-contact" id="nav-contact"><%= link_to 'Contact', "#{root_url}#contact" %></li>
						<li class="nav-pricing" id="nav-pricing"><%= link_to 'Pricing', "#{root_url}#pricing" %></li>
						<li class="nav-about" id="nav-about"><%= link_to 'About', "#{root_url}#about" %></li>
					<% end %>
				<% elsif params[:controller] == "admin" %>
					<%= render partial: "admin/top_nav" %>
				<% elsif params[:controller] == "uber_admin" %>
					<%= render partial: "uber_admin/top_nav" %>
				<% elsif params[:controller] == "connect" %>
					<%= render partial: "connect/top_nav" %>
				<% elsif @project %>
					<%= render partial: "projects/project_nav" %>
				<% elsif user_signed_in? %>
					<%= render partial: "layouts/internal_nav" %>
				<% end %>
			</ul>

			<% if user_signed_in? %>
				<div id="dropdown">
					<%= image_tag("menu.png",style:"width:34px;",id:"dropdown-toggle") %>
					<% if @project %>
						<ul id="dropdown-menu">
							<li class="nav-dashboard admin"><%= link_to @project.name, project_path(@project), :remote => true %></li>
							<li class="nav-checklists admin"><%= link_to "Checklist", checklist_project_path(@project), :remote => true %></li>
							<li class="nav-documents admin"><%= link_to "Documents", document_photos_project_path(@project), :remote => true %></a></li>
							<li class="nav-reports admin"><%= link_to "Reports", reports_path(:project_id => @project.id), :remote => true %></li>
							<li class="nav-worklists admin"><%= link_to "Tasks", worklist_project_path(@project), :remote => true %></li>
							<% if current_user.admin %> 
								<li class="nav-edit admin"><%= link_to "Edit", edit_project_path(@project), :remote => true %></li> 
							<% end %>
						</ul>	
					<% elsif params[:controller] == "admin" %>
						<ul id="dropdown-menu">
							<li><%= link_to "New Project", new_project_admin_index_path, :id => "new-project-link", :remote => true %></li>
							<% if current_user.uber_admin %><li><%= link_to "Groups", project_groups_admin_index_path, :id => "groups-link", :remote => true %></li>
							<li><%= link_to "Safety Topics", safety_topics_admin_index_path, :id => "admin-safety-topics-link", remote: true %></li>
							<li><%= link_to "Reports", reports_admin_index_path, :id => "admin-reports-link", :remote => true %></li><% end %>
							<li><%= link_to "Checklists", checklists_admin_index_path, :id => "admin-checklists-link", :remote => true %></li>
							<li><%= link_to "Personnel", users_admin_index_path, :id => "personnel-link", :remote => true %></li>
							<% if current_user.uber_admin %><li><%= link_to "Billing", billing_admin_index_path, :id => "billing-link", :remote => true %></li><% end %>
						</ul>

					<% else %>	
						<ul id="dropdown-menu">
							<%= render partial: "layouts/internal_nav" %>
						<ul>
					<% end %>
				</div>
			<% end %>
		</div>
		
		<% if user_signed_in? %>
			<div id="inner-wrap">
				<%= yield %>
			</div>
		<% else %>
			<%= yield %>
		<% end %>
		<div id="push"></div>
	</div>
<footer>
	<div id="container">
		<ul>
			<li><a href="http://blog.buildhawk.com" target="_blank" >Blog</a></li>
			<li><%= mail_to "contact@buildhawk.com", "Contact", encode: "javascript", :id => "contact-link" %></li>
		</ul>
		<ul>
			<li><a href="/terms">Terms of Service</a></li>
			<li><a href="/privacy">Privacy Policy</a></li>
		</ul>
		<div id="copyright">&copy; 2014 BuildHawk Inc</div>
	</div>
</footer>

<script type="text/javascript">
	$(document).ready(function() {
		setupWindow();
		$.ajaxSetup({ cache: false });
		datetimepickers();
	});
</script>
</body>
</html>
