		   		setTimeout(function () { window.location = "https://itunes.apple.com/us/app/buildhawk/id816590963?mt=8" }, 25);
		   	 	<% if @item %>
		  	 		window.location = "buildhawk://?task_id=<%= j @item.id.to_s %>"	
