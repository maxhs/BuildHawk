<%= form_for(folder, url: folder_path(folder), :method => :patch, :remote => true) do |f|%>
	<%= f.text_field :name, :value => folder.name %>
	<%= f.submit "Save", :class=>"simple-btn" %>
	<%= image_tag "blackX.png",:class=>"remote cancel", :style=>"width:22px;" %>
	<%= link_to image_tag("trashButton.png",:class=>"delete-img remote"), folder_path(folder), :method => :delete, remote: true, :data => {:confirm => "Are you sure you want to delete this folder? This will also delete all of the folder\'s contents."}%>
<% end %>

<script>
	$('.edit_folder .cancel').click(function(){
		$(this).parent('.edit_folder').fadeOut(170,function(){
			$(this).html('<%= j render :partial => "folders/folder", locals: {folder:folder, project:project} %>');
			$(this).fadeIn(170);
		});
	});
</script>