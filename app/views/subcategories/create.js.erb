<% if @subcategory.category.checklist.project %>
	$('#new_subcategory').replaceWith('<%= j render partial:"projects/subcategory", locals:{:subcategory => @subcategory} %>');
<% else %>
	$('#new_subcategory').replaceWith('<%= j render partial:"admin/subcategory", locals:{:subcategory => @subcategory} %>');
<% end %>
$('#new-category-<%=@subcategory.category.id %>').text('Add a new category');