if ($('#<%=@category.id%>-items .new_subcategory').length){
	$('#<%=@category.id%>-items .new_subcategory').fadeOut(200,function(){
		$(this).remove();
		$('#new-category-<%=@category.id%>').text("Add a new category");
	});

} else {
	var newDiv = $('<%= j render partial:"subcategories/new" %>').css('display','none');
	$('#new-category-<%=@category.id%>').before(newDiv);
	newDiv.fadeIn(200);
	$('#new-category-<%=@category.id%>').text("Cancel");
}
