<h1 style="text-align:center"><%= @report.report_type %> - <%= @report.created_date %></h1>
<h2 style="text-align:center"><%= @report.project.name %> </h2>

<p><%= @report.body %></p>

<% if @report.photos && @report.photos.count > 0 %>
	<h3>Report Photos:</h3>
	<div style="margin-top:20px;">
		<% @report.photos.each do |p| %>
			<% if p.image_file_name %>
				<%= link_to image_tag(p.image.url(:small)), show_report_project_url(@report.project, :report_id => @report.id, :host => "www.buildhawk.com"), :style=>"float:left; margin:10px;" %>
				<span><%=p.name%> 
			<% end %>
		<% end %>
	</div>
<% end %>

<div style="clear:both">
	<h3>Weather Details</h3>
	<p><%= @report.weather %></p>
</div>
<div>
	<h4>Temp:</h4> <%= @report.temp %>
</div>
<div>
	<h4>Wind:</h4> <%= @report.wind %>
</div>
<div>
	<h4>Humidity:</h4> <%= @report.humidity %>
</div>
<div>
	<h4>Precip:</h4> <%= @report.precip %>
</div>
