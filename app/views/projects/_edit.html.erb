<div "project-edit" class="border-box" style="padding-top:20px;">
	<h3 style="text-align:center;">Edit Project</h3>
	<%= nested_form_for @project, :method => :put, :remote => true do |f| %>
		<table id="edit-project-form">
			<%= hidden_field_tag :company_id, current_user.company.id %>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
			<tr><td><%= f.text_field :name, :placeholder => "Project name" %></td></tr>
			
			<%= f.fields_for :address do |a| %>
				<tr><td><%= a.text_field :street1 , :placeholder => "Street address" %></td></tr>
				<tr><td><%= a.text_field :city , :placeholder => "City" %></td></tr>
				<tr><td><%= a.text_field :state , :placeholder => "State" %></td></tr>
				<tr><td><%= a.text_field :zip , :placeholder => "Zip" %></td></tr>
			<% end %>
			
		    <tr><td style="padding:10px 0;">
		    	<h4>Personnel Assigned:</h4>
		    	<%= f.select :user_ids, @users.all.collect {|u| [u.full_name, u.id]}, {}, :style=>"min-height:140px;", :multiple => true %>
		    	<div style="color:#aaa;">(&#8984; or ctrl click to deselect)</div>
		    </td></tr>

		    <% if current_user.uber_admin %>
			    <tr><td style="padding:0;">
			    	<h4>Make Core?</h4>
			    	<%= f.check_box :core, :style=>"padding:7px; display:inline-block; width:33px;" %> (Check to use as demo)
			    </td></tr>
			<% end %>
			<tr><td><button class="btn btn-success btn-md pull-right"><%= f.submit "Save" %></button></td></tr>
			<tr><td style="padding-top:23px;width:"><%= link_to "Remove Project", destroy_confirmation_project_path(@project), :method => :get, :class=>"pull-right delete-link", :remote => true %></td></tr>
		</table>
	<% end %>
</div>