<div "project-edit">
	<table id="edit-project-form">
		<%= nested_form_for @project, :method => :put, :remote => true do |f| %>
			<%= hidden_field_tag :company_id, current_user.company.id %>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
			<tr><td><%= f.text_field :name, :placeholder => "Project name" %></td></tr>
			
			<%= f.fields_for :address do |a| %>
				<tr><td><%= a.text_field :street1 , :placeholder => "Street address" %></td></tr>
				<tr><td><%= a.text_field :city , :placeholder => "City" %></td></tr>
				<tr><td><%= a.text_field :state , :placeholder => "State" %></td></tr>
				<tr><td><%= a.text_field :zip , :placeholder => "Zip" %></td></tr>
			<% end %>
			
		    <tr><td style="padding:10px 0;">
		    	<h4>Personnel Assigned:</h4>
		    	<%= f.select :user_ids, @users.all.collect {|u| [u.full_name, u.id]}, {}, :style=>"min-height:140px;", :multiple => true %></td></tr>
		    
			<tr><td><button class="btn btn-success btn-lg pull-right"><%= f.submit "Save" %></button></td></tr>
		<% end %>
			<tr><td style="padding-top:23px;"><%= link_to "Remove Project", project_path(@project), :method => :delete, :class=>"pull-right", :data => {:confirm => "Are you sure you want to delete this project?"} %></td></tr>
		
	</table>
</div>