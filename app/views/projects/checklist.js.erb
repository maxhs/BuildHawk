$('#main').html('<%= j render :partial => "projects/checklist" %>');
window.scrollTo(0,0);

<% if @phase %>
	if ($('#phase-<%= @phase.id %>').length){
		$('#phase-<%= @phase.id %> .phase-link').click();
	}
	if (history && history.pushState){
	    history.pushState(null, null, '<%=root_url%>projects/<%=@project.to_param%>/checklist?phase_id=<%=@phase.id%>');
	    $(window).bind("popstate", function(){
	      $.getScript(location.href);
	    });
	}
<% else %>
	if (history && history.pushState){
	    history.pushState(null, null, '<%=root_url%>projects/<%=@project.to_param%>/checklist');
	    $(window).bind("popstate", function(){
	      $.getScript(location.href);
	    });
	}
<% end %>
closeMenu();