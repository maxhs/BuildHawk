<div class="border-box" style="padding:20px 20px 5px;">
	<% if @projects.count > 0 %>
		<% @projects.each do |project| %>
			<div class="search-project">
				<table style="border-bottom:1px solid #eee; width:100%;">
					<tr style="border-width:0;"><td><h4><%= link_to project.name, project_path(project), remote: true %></h4></td></tr>
				
					<tr>
						<td class="search-label">Map:</td>
						<td><%= link_to project.address.formatted_address, "https://www.google.com/maps/preview#!q=#{project.address.formatted_address.html_safe}", :target=>"_blank" %></td>
					</tr>

				</table>
			</div>

		<% end %>
	<% else %>
		<div style="color:#aaa;text-align:center;font-size:1.25em; font-style:italic;margin-top:50px;font-weight:200;"><%=@prompt%></div>
	<% end %>

	<script type="text/javascript">
		$(document).ready(function(){
			Shadowbox.clearCache();
		    Shadowbox.setup(".shadow-photo", {});
		});
	</script>
</div>
