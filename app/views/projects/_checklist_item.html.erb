<div class="checklist-item-form">
<div class="row">
	<span class="col-md-5 header-description"><h2><%= @checklist_item.category_name %></h2></span>
</div>
<div class="row">
	<span class="col-md-5 header-description"><h3 style="padding-left:1em"><%= @checklist_item.subcategory_name %></h3></span>
</div>
<div class="row">
	<span class="col-md-12 item-body"><%= @checklist_item.body %></span>
</div>

<table style="margin: 0 auto; width:100%;">
	<%= nested_form_for @checklist_item, :url => {:controller => :checklist_items, :action => :update, :id => @checklist_item.id, :multipart => true}, :method => :post do |f| %>
		<tr><td>
			<h4>Status:</h4>
			<%= f.select :status, [nil,"In-Progress","Completed","Not Applicable"], :style => "width:400px !important;" %>
		</td></tr>

		<tr><td>
			<h4>Critical Date:</h4>
			<div class="input-append date" data-date="12-02-2012" data-date-format="dd-mm-yyyy">

					<%= f.text_field :critical_date, :value => parse_date(f.object.critical_date), :placeholder => Time.now.strftime("%m/%d/%Y"), :class =>"date-input", :id => "dp" %>
					<span class="add-on"><i class="icon-th"></i></span>
		
			</div>
		</td></tr>
		<tr><td>
			<% if @checklist_item.photos %>
				<% @checklist_item.photos.each do |p| %>
					<% if p.image_file_name%>
						<%= link_to p.image.url(:original), :class => "shadow-photo", :rel => "shadowbox[Mixed]" do %> 
							<%= image_tag p.image.url(:small) %> 
						<% end %>
					<% end %>
				<% end %>
			<% end %>
		</td></tr>

		<tr><td><span style="margin-right:20px">Add a photo</span>
			<%= f.fields_for :photos, @checklist_item.photos.build do |photo| %>
				<%= photo.file_field :image %>
				<%= photo.hidden_field :project_id, :value => @project.id %>
				<% if @checklist_item.id %><%= photo.hidden_field :checklist_item_id, :value => @checklist_item.id %><% end %>
				<%= photo.hidden_field :source, :value => "Checklist" %>
			<% end %>
		</td></tr>


		<tr><td><button class="btn btn-success btn-lg pull-right"><%= f.submit "Update" %></button></td></tr>
	<% end %>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		$("#dp").datepicker();
		Shadowbox.clearCache();
	    Shadowbox.setup(".shadow-photo", {});
	});
</script>