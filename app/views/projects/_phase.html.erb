<li class="phase" id="phase-<%=p.id%>">
	<div class="row">
		<span class="col-xs-8">
			<h3 class="title remote">
				<%= link_to load_items_checklist_path(p), :id => "p-#{p.id}", data:{phase:"#{p.id}"}, :class=>"phase-link remote", remote: true do %>
					<i class="fa fa-circle-o disclosure"></i>
					<%=p.name%>
				<% end %>
				<% if current_user.any_admin? %>
					<%= link_to edit_phase_path(p), :class => "edit-phase", remote: true do %>
						<i class="fa fa-cog remote"></i>
					<% end %>
				<% end %>
			</h3>
		</span>
		<span class="col-xs-2 phase-label"><%= parse_date(p.milestone_date) %></span>	
		<span class="col-xs-2 phase-label"><%= parse_date(p.completed_date) %></span>
	</div>
	<ul id="<%= p.id %>-items"></ul>
</li>