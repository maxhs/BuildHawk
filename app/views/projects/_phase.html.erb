<li class="category" id="phase-<%=c.id%>">
	<% if current_user.admin %>
		<%= link_to "Edit", category_checklist_path(@project, :category_id => c.id, :project_id => @project.id), :class => "left-edit remote", remote: true %>
	<% end %>
	<div class="header row">
		<span class="col-xs-8"><h2 style="margin: 20px auto;display:inline-block"><%= link_to c.name, load_items_checklist_path(c), :id => "c-#{c.id}", :class=>"phase-name remote", :remote => true %></h2></span>
		<span class="col-xs-2 phase-label"><%= parse_date(c.milestone_date) %></span>	
		<span class="col-xs-2 phase-label"><%= parse_date(c.completed_date) %></span>
	</div>
	<ul id="<%= c.id %>-items"></ul>
</li>
<script>
	$(document).ready(function(){
		$('#<%= c.id %>-items').sortable({
          axis: 'y',
          dropOnEmpty:true,
          cursor: 'move',
          items: 'li',
          opacity: 0.4,
          scroll: true,
          stop: function(){
            $.ajax({
                type: 'post',
                data: $('#<%= c.id %>-items').sortable('serialize') + '&id=<%=c.id-%>',
                dataType: 'script',
                complete: function(request){
                    //$('#categories').effect('highlight');
                  },
                url: '/checklists/order_subcategories'})
            }
        })
	});
</script>