<div id="task-<%=item.id%>" class="task row">
	<div class="col-xs-1">
		<span class="worklist-item-checkbox"><%= check_box_tag :select, item.id %></span>
	</div>
	<div class="col-xs-1">
		<% if item.photos && item.photos.count > 0 %>
			<% photo = item.photos.where("image_file_name IS NOT NULL").first %>
			<% if photo %><%=image_tag(photo.image.url(:thumb)) %><% end %>
		<% end %>
	</div>
	
	<div class="col-xs-3">
		<% if item.body && item.body.length > 0 %>
			<%= link_to item.body, edit_worklist_item_path(item), :remote => true %> 
		<% else %>
			<%= link_to edit_worklist_item_path(item), :remote => true do %> <span style="width:100%;">&nbsp;</span><% end %>
		<% end %>
	</div>	
	<div class="col-xs-3">
		<% if item.assignee_id %>
			<%= item.assignee.full_name %>
		<% elsif item.sub_assignee_id %>
			<%= item.sub_assignee.name %>
		<% else %>
			<span style="color:#aaa;font-style:italic;">Not yet assigned</span>
		<% end %>
	</div>
	<div class="col-xs-2">
		<% if item.completed %>
			<%= parse_time item.completed_at %>
		<% end %>
	</div>
	<div class="col-xs-2"><%= parse_time item.created_at %></div>
</div>
					