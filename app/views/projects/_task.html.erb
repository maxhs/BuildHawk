<div id="task-<%=task.id%>" class="task row">
	<!--<div class="col-xs-1">
		<span class="worklist-item-checkbox"><%= check_box_tag :select, task.id %></span>
	</div>-->
	<div class="col-xs-2">
		<% if task.photos && task.photos.count > 0 %>
			<% photo = task.photos.where("image_file_name IS NOT NULL").first %>
			<% if photo %><%=image_tag(photo.image.url(:thumb)) %><% end %>
		<% end %>
	</div>
	
	<div class="col-xs-3">
		<% if task.body && task.body.length > 0 %>
			<%= link_to task.body, edit_worklist_item_path(task), :remote => true %> 
		<% else %>
			<%= link_to edit_worklist_item_path(task), :remote => true do %> <span style="width:100%;">&nbsp;</span><% end %>
		<% end %>
	</div>	
	<div class="col-xs-3">
		<% if task.assignee_id && task.assignee %>
			<%= task.assignee.full_name %>
		<% elsif task.sub_assignee_id && task.sub_assignee %>
			<%= task.sub_assignee.name %>
		<% elsif task.connect_assignee_id && task.connect_assignee %>
			<%= task.connect_assignee.full_name %>
		<% else %>
			<span style="color:#aaa;font-style:italic;">Not yet assigned</span>
		<% end %>
	</div>
	<div class="col-xs-2">
		<% if task.completed %>
			<%= parse_time task.completed_at %>
		<% end %>
	</div>
	<div class="col-xs-2"><%= parse_time task.created_at %></div>
</div>
					