<li class="category" id="category-<%=category.id%>">
	<div class="header row">
		<div class="col-xs-8">
			<h5 class="title" id="<%= category.id %>"><%= category.name %></h5>
			<span style="padding:0 1em;color:#aaa;">(<%=category.completed_count%> of <%= category.checklist_items.count%>)</span>
			<% if current_user.admin || current_user.company_admin %>
				<%= link_to edit_category_path(category), :class=>"edit-category", remote: true do %>
					<i class="fa fa-cog remote"></i>
				<% end %>
			<% end %>
			
		</div>
		<div class="col-xs-2 category-label">
			<%= parse_date(category.milestone_date) %>
		</div>
		<div class="col-xs-2 category-label">
			<%= parse_date(category.completed_date) %>
		</div>
	</div>

	<div class="items-container collapsed" id="category-<%=category.id%>-container">
		<ul class="category-items" id="items-<%=category.id%>">
			<%= render partial:"projects/item", collection:category.checklist_items, as: :item, cache: true %>
		</ul>
		<%= link_to new_checklist_item_path(:project_id => @project.id, :category_id => category.id), :id=>"new-item-#{category.id}", :class=>"new-checklist-item empty-btn", :remote => true do %>
			<i class="fa fa-plus remote"></i><span style="padding-left:10px;">Item</span>
		<% end %>
	</div>
</li>