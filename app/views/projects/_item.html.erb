<li id="item-<%=item.id%>">
	<% if item.status == "Completed" %>
		<div class="row checklist-item completed" id="item-<%=item.id%>">
	<% elsif item.status == "Not Applicable" %>
		<div class="row checklist-item not-applicable" id="item-<%=item.id%>">
	<% else %>
		<div class="row checklist-item" id="item-<%=item.id%>">
	<% end %>

	<% if current_user.admin %>
		<div class="col-md-6 checklist-body" style="margin-left:20px;margin-right:-20px;">
	<% else %>
		<div class="col-md-8 checklist-body" style="margin-left:20px;margin-right:-20px;">
	<% end %>
			<%= link_to item.body, checklist_item_project_path(@project, :item_id => item.id), :remote => true %>
		</div>

		<div class="col-md-2" style="text-align: center;">
			<% if item.critical_date %>
				<%= parse_date item.critical_date %>
			<% else %>
				&nbsp;
			<% end %>
		</div>

		<div class="col-md-2" style="text-align: center;">
			<% if item.completed_date %>
				<%= parse_date item.completed_date %>
			<% else %>
				&nbsp;
			<% end %>
		</div>
		
	<% if current_user.admin && item.status != "Completed" %>
		<div class="col-md-1" style="text-align: center;">
			<%= link_to 'Edit', edit_checklist_item_path(item), :class => "btn btn-md btn-success", remote: true %>
		</div>
		<div class="col-md-1" style="text-align: center;">
			<%= link_to 'Delete', delete_item_project_path(@project, :checklist_item_id => item.id), :data => {:confirm => "Are you sure you want to delete this checklist item?"}, :method => :delete, :class=>"btn btn-md btn-danger remote", :remote => true %>
		</div>
	<% end %>

	</div>
</li>