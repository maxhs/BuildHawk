<script>
	$('ul.nav li > a').removeClass('current-page');
	$('#nav-projects a').addClass('current-page');
</script>
	<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role ="navigation">
	<div class="well sidebar-nav projects">
		<% if @projects && @projects.count > 0 %>
			<div class="sidebarProjects">
				<% @projects.each do |project| %>
					<% if project.checklist && project.checklist.item_count > 0 %>
						<div><%= link_to "#{project.name} - (#{number_to_percentage(project.checklist.completed_count.to_f/project.checklist.item_count*100, :precision =>1)})" , project_path(project), :id=>"#{project.id}-link", :remote => true %></div>
					<% else %>
						<div><%= link_to project.name, project_path(project), :id=>"#{project.id}-link", :remote => true %></div>
					<% end %>
				<% end %>
			</div>
		<% else %>
			<div style="font-style:italic;color:#aaa;padding:30px 0;text-align:center;font-size:1.25em;font-weight:200">No projects yet</div>
		<% end %>
	</div>
</div>
		<div class="col-xs-12 col-sm-9" id="main">
