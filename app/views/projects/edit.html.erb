						<li class="nav-dashboard active"><%= link_to "Dashboard", project_path(@project), :remote => true %></li>
						<% if @project.checklist %><li class="nav-checklists"><%= link_to "Checklist", checklist_project_path(@project), :remote => true %></li><% end %>
						<li class="nav-documents"><%= link_to "Documents", photos_project_path(@project), :remote => true %></a></li>
						<li class="nav-reports"><%= link_to "Reports", reports_project_path(@project), :remote => true %></li>
						<li class="nav-punchlists"><%= link_to "Work List", worklist_project_path(@project), :remote => true %></li>
