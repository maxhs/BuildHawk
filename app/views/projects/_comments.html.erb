<h3 style="text-align:center; width:50%;margin:0 auto; display:block;">Comments</h3>
		<div id="comments-form">
	<%= form_for @report.comments.new, :method => :post, :remote => true do |f| %>
		<%= f.text_area :body, :rows => "3", :placeholder => "Type your notes/comment here" %>
		<%= f.hidden_field :user_id, :value => current_user.id %>
		<%= f.hidden_field :report_id, :value => @report.id %>
		<button class="btn btn-success btn-lg pull-right"><%= f.submit "Send" %></button>
	<% end %>
</div>
<table id="comments-table">
	<% if @report.comments && @report.comments.count > 0 %>
		<% @report.comments.each do |comment| %>
			<tr>
				<td style="width:80%;"><%= comment.body %></td>
				<td style="width:20%;"><%= parse_time comment.created_at %></td>
			</tr>
		<% end %>
	<% end %>
</table>