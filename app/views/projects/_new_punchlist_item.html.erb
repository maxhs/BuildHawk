<table id="add-punchlist">
	<%= nested_form_for @punchlist_item, :url => {:action => :punchlist_item, :multipart => true }, :method => :post do |f| %>
		<tr><td><h3>Add a new Punchlist item</h3></td></tr>
		<tr><td><%= f.text_field :body, :placeholder => "Describe the work item" %></td></tr>
		<tr><td><%= f.text_field :location, :placeholder => "Add a location (optional)" %></td></tr>
		<tr><td><span style="margin-right:20px">Select an assignee</span><%= f.select :assignee, options_for_select(current_user.company.users.collect{|u| u.full_name}) %></td></tr>
		<tr><td><span style="margin-right:20px">Add a photo</span>
			<%= f.fields_for @punchlist_item.photos.build do |photo| %>
				<%= photo.file_field :image %>
			<% end %>
		</td></tr>
		<tr><td><button class="btn btn-success btn-lg pull-right"><%= f.submit "Add" %></button></td></tr>
		<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
		<%= hidden_field_tag :project_id, @project.id %>
	<% end %>
</table>