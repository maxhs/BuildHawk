<div class="image-block" id="photo-<%=p.id%>">
	<%= link_to p.image.url(:original), :class => "shadow-photo", :rel => "shadowbox[Mixed]" do %> 
		<%= image_tag p.image.url(:small) %> 
		<div><span class="label">Date:</span><%= p.created_date%></div>
		<div><% if p.source %><span class="label">Source:</span><%= p.source%><% end %></div> 
		<div><% if p.user %><span class="label">Taken by:</span><%= p.user.full_name%><% else %>&nbsp;<% end %></div>
		<%= link_to 'Delete Photo', photo_path(p), :method => :delete, :class=>"delete-link", :remote => true, :data => {:confirm => "Are you sure you want to delete this photo? This can't be undone."} %>
	<% end %>
</div>