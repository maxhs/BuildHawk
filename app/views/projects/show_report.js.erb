$('#main * .navbar-nav > li > a').removeClass('current-page');
$('.nav-reports a').addClass('current-page');
$('#pages').fadeOut(170,function(){
	$(this).html('<%= j render :partial => "edit_report", :locals => {:report => @report } %>');
	$(this).fadeIn(170);
	$("html, body").animate({ scrollTop: 0 }, 300);
});