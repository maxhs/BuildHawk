$('a').removeClass('current-page');
$('#alert').fadeOut(400);
var nav = $('<%= j render partial: "projects/project_nav" %>');
$('#navigation').fadeOut(170,function(){
	$(this).html(nav);
	$(this).fadeIn(170);
	$('#<%=@project.id%>-link, .nav-dashboard.admin a').addClass('current-page');
});

$('#main').fadeOut(170,function(){
	$(this).html('<%= j render :partial => "projects/show", :locals => {:project => @project} %>');
	$(this).fadeIn(170,function(){
		closeMenu();
	});
	$("html, body").animate({ scrollTop: 0 }, 300);
});