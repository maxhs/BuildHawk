<% if @folders && @folders.count %>
	<ul>
		<%= render partial: "folders/folder", collection: @folders, as: :folder, cache: false %>
	</ul>
<% end %>
<div id="add-folder-link">+ FOLDER</div>
<script type="text/javascript">
	$('#add-folder-link').on('click',function(){
		$(this).fadeOut(200,function(){
			$(this).replaceWith('<%= form_for Folder.new, :remote => true do |f| %><%= f.text_field :name, :placeholder => "New folder name..." %><%= f.hidden_field :project_id, :value => @project.id %><%= f.submit "Create", :class => "btn btn-md btn-success pull-right", :style => "margin-top:9px;" %><% end %>');
			$(this).fadeIn(200);
		});
	});
	$('#remove').on('click',function(){
		$('#search').val('');
		$('#document-search').submit();
	});
</script>