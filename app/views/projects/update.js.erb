showAlert("Project Updated");
$('.sidebarProjects > li a').removeClass('current-page');
$('#<%=@project.id%>-link').addClass('current-page');
$('#project-name-<%=@project.id%>').text('<%= j @project.name.html_safe %>');
$('#main').html('<%= j render partial: "projects/show", locals: {project: @project} %>');

if (history && history.pushState){
    history.pushState(null, null, '<%=root_url%>projects/<%=@project.to_param%>');
    $(window).bind("popstate", function(){
      	$.getScript(location.href);
    });
}