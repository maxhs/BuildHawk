$('a').removeClass('current-page');
var nav = $('<%= j render partial: "layouts/internal_nav" %>');
$('#navigation').fadeOut(170,function(){
	$(this).html(nav);
	$(this).fadeIn(170,function(){
		$('#alert').fadeOut(400);
	});
});

$('#inner-wrap').html('<%= j render :partial => "index" %>');
$("html, body").animate({ scrollTop: 0 }, 0);