<div id="project-documents" class="border-box">
	<div style="border-bottom:1px solid #eee;padding:10px 0;">	

		<ul id="filters">
			<li><h4><%= link_to "Project Docs", document_photos_project_path(@project), :id => "document-photos-nav", :class => "current-page", :remote => true %></h4></li>
			<li><h4><%= link_to "Checklist", checklist_photos_project_path(@project), :id => "checklist-photos-nav", :remote => true %></h4></li>
			<li><h4><%= link_to "Worklist", worklist_photos_project_path(@project), :id => "worklist-photos-nav", :remote => true %></h4></li>
			<li><h4><%= link_to "Reports", report_photos_project_path(@project), :id => "report-photos-nav", :remote => true %></h4></li>
			<li><h4><%= link_to "All", documents_project_path(@project), :id => "all-photos-nav", :remote => true %></h4></li>
		</ul>
	</div>
	<div id="photo-section">
		
		<div id="photo-table">
			<div id="photo-search">
				<%= form_tag search_photos_path(:project_id => @project.id), :id => "document-search", :method => :post, :class=>"input-group", :style=>"width:100%;", remote: true do %>
					<%= text_field_tag :search, nil, :placeholder=>"Search for documents...", :class=>"form-control" %>
					<span class="input-group-addon" style="cursor: pointer;" id="remove"><span class="glyphicon glyphicon-remove"></span></span>
				<% end %>
			</div>
			<div id="folders">
				<%= render :partial => "projects/folders" %>
			</div>
		</div>
		<div id="photo-focus">
			<% if @photos && @photos.count > 0 %>	
				<%= render :partial => "photos/large_image" %>
			<% else %>
				<div class="no-image-placeholder">No Documents</div>
			<% end %>
		</div>
	</div>
</div>