<div id="project-documents" class="border-box">
	<div>
		<h2 style="display:inline-block">Documents</h2>
		
		<ul id="filters">
			<li><%= link_to "All", documents_project_path(@project), :remote => true %></li>
			<li><%= link_to "Documents", document_photos_project_path(@project), :remote => true %></li>
			<li><%= link_to "Checklist", checklist_photos_project_path(@project), :remote => true %></li>
			<li><%= link_to "Worklist", worklist_photos_project_path(@project), :remote => true %></li>
			<li><%= link_to "Reports", report_photos_project_path(@project), :remote => true %></li>
			<li><%= link_to "Add Document", new_photo_project_path(@project), :style=>"margin:0 auto;text-align:center",:id => "add-photo-link", :remote => true %></li>
		</ul>
	</div>
	<div id="photo-section">
		<div id="photo-table">
			<ul>
				<% @photos.map(&:source).each do |s| %>
					<li><%= s %></li>
				<% end %>
			</ul>
		</div>

		<div id="photo-focus">
			<% @photos.each do |p| %>
				<% if p.image_file_name %>
					<%= render :partial => "image", :locals => {:p => p} %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
	<script type="text/javascript">
		$(document).ready(function(){
			Shadowbox.clearCache();
		    Shadowbox.setup(".shadow-photo", {});
		});
	</script>
