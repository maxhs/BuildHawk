$('#main').html('<%= j render :partial => "projects/worklist", locals:{project: @project, tasks:@tasks, task: @task} %>');
$("html, body").animate({ scrollTop: 0 }, 0);

if (history && history.pushState){
    history.pushState(null, null, '<%=root_url%>projects/<%=@project.id%>/worklist');
    $(window).bind("popstate", function(){
      $.getScript(location.href);
    });
}
closeMenu();