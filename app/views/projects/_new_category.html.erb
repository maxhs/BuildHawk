<%= nested_form_for @new_category, url: create_category_project_path(@project, :checklist_id => @checklist.id), :remote => true, :method => :post do |f| %>
	<%= f.hidden_field :order_index, :value => @item_index.to_i %>
	<%= f.hidden_field :checklist_id, :value => @project.checklist.id %>
	<%= hidden_field_tag :previous_category_id, @category.id %>

	<div class="row">
		<div class="col-md-11"><%= f.text_field :name, :placeholder => "Name the new phase...", :style=>"width:100%;" %></div>
		<button class="btn btn-success btn-md pull-right col-md-1" style="margin:0;"><%= f.submit "Add", :class => "no-link", :style=>"margin:0 auto;" %></button>
	</div>

<% end %>