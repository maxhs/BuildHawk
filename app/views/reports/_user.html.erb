<div class="report-user">
	<%= text_field_tag "report_users[#{report_user.user.id if report_user.user.id}]", report_user.hours, :class => "report-personnel-input" %>
	<span style="padding-left:1em;">
		<%= report_user.user.full_name if report_user.user %>
	</span>
	<%= link_to image_tag('blackX.png', :class=>"remove-personnel remote"), remove_report_user_report_path(report_user), id:"remove-report-user-#{report_user.id}", method: :delete, remote: true, data: {confirm: "Are you sure you want to remove #{report_user.user.full_name} from this report?"} %>
</div>