var reportsOffset = document.getElementById('project-reports').offsetHeight;
$('.active-report').removeClass('active-report');
$('.faded').removeClass('faded');

$('#report-focus').css({'margin-top':-reportsOffset,'left':'50%'});
$("html, body").delay(200).animate({ scrollTop: 0 }, 200);