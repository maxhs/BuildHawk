$('#top-nav a').removeClass('current-page');
$('.nav-reports a').addClass('current-page');
if ($('.datepicker.dropdown-menu').length){
	$('.datepicker.dropdown-menu').remove();
}

$("#project-reports").addClass('reports-panel');
$('#report-focus').html('<%= j render :partial => "reports/edit", :locals => {:report => @report } %>');
var offset = $('#report-<%=@report.id %>').offset().top-136;
$('#report-focus').css('top',offset);
$("html, body").animate({ scrollTop: offset }, 120);
