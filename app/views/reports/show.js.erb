$('#top-nav a').removeClass('current-page');
$('.nav-reports a').addClass('current-page');
if ($('.datepicker.dropdown-menu').length){
	$('.datepicker.dropdown-menu').remove();
}

$("#project-reports").addClass('reports-panel');
$('#report-focus').html('<%= j render :partial => "reports/edit", :locals => {report: @report, project: @project, project_users: @project_users } %>');
var reportOffset = document.getElementById('report-<%=@report.id %>').offsetTop;
var focusOffset = document.getElementById('project-reports').offsetHeight;
var posTop = reportOffset-focusOffset-100;
$('.active-report').removeClass('active-report');
$('.report').addClass('faded');
$('#report-<%= @report.id %>').replaceWith('<%= j render partial:"reports/index_row", locals: {report: @report} %>');
$('#report-<%= @report.id %>').addClass('active-report');
$('#report-focus').css({/*'margin-top':posTop,*/'left':'50%'});
$("html, body").delay(200).animate({ scrollTop: $("#report-<%=@report.id %>").offset().top-100 }, 200);