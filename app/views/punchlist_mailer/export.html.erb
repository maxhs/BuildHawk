<h1 style="text-align:center;margin:0 auto;"> <%= @project.name %> </h1>
<h2 style="text-align:center;margin:5px auto;"> Worklist Report </h2>


<% @item_array.each do |item| %>

	<div style="width:100%;clear:both;">
		<% if item.photos && item.photos.count > 0 && item.photos.first.image_file_name %>
			<% photo = item.photos.first %>
				<%= link_to edit_punchlist_item_url(item, :project_id => @project.id, :host => "www.buildhawk.com"), :style=>"float:left;margin:0 10px 10px 0;" do %>
					<%= image_tag(photo.image.url(:small), :style => "width:100px;display:block;") %> 
					<div style="text-align:center"><%= photo.created_date %></div>
				<% end %>
			<% end %>

		<span style="font-size:16px;"><%= item.body %></span>

		<% if item.assignee || item.sub_assignee %>
			<div>
				<h4 style="display:inline-block">Assigned:</h4>
				<span>
					<% if item.assignee %>
						<%= item.assignee.full_name %>
					<% elsif item.sub_assignee %>
						<%= item.sub_assignee.name %>
					<% end %>
				</span>
			</div>
		<% end %>
		
		<% if item.completed %>
			<div><h4 style="display:inline-block">Status:</h4><span style="padding-left:2em;font-weight:normal;">Complete</span></div>
		<% else %>
			<div><h4 style="display:inline-block">Status:</h4><span style="padding-left:2em;color:#cc0000;font-weight:normal;">IN PROGRESS</span></div>
		<% end %>
	</div>

<% end %>
