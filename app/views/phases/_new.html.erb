<%= nested_form_for @phase, remote: true, method: :post do |f| %>
	<%= f.hidden_field :checklist_id, value: @checklist.id %>
	<i class="fa fa-remove remote" title="Dismiss" id="dismiss-new-phase"></i>
	<%= f.label "New Phase" %>
	<div class="new-phase row">
		<div class="col-xs-10" style="padding-left:0;padding-right:0;">
			<%= f.text_field :name, :placeholder => "Name the new phase..." %>
		</div>
		<div class="col-xs-2 center">
			<%= f.submit "Add", :class => "simple-btn" %>
		</div>
	</div>
<% end %>