<%= nested_form_for @phase, :remote => true, :method => :post do |f| %>
	<%= f.hidden_field :checklist_id, :value => @checklist.id %>
	<div class="row">
		<div class="col-xs-10" style="padding-left:0;padding-right:0;"><%= f.text_field :name, :placeholder => "Name the new phase..." %></div>
		<%= f.submit "Add", :class => "simple-btn col-xs-2" %>
	</div>
<% end %>