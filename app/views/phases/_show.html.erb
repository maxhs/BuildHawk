<div class="phase-form container">
	<div class="border-box">	
		<span class="header-description"><h2><%= @phase.name %></h2></span>
		<%= nested_form_for @phase, :remote => true, :method => :patch do |f| %>

			<div class="row">
				<div class="col-xs-1">
					<h4 class="align-left">Name:</h4>
				</div>

				<div class="col-xs-11">
					<%= f.text_field :name %>
				</div>
			</div>
			<% if @project %>
				<div class="row">
					<div class="col-xs-6" style="text-align:center">
						<h4>Milestone Date</h4>
						<div class="input-append date row" data-date-format="dd-mm-yyyy">
							<%= f.text_field :milestone_date, :value => parse_date(f.object.milestone_date), :placeholder => Time.now.strftime("%m/%d/%Y"), :class =>"date-input", :id => "dp" %>
							<div id="clear-critical-date"> Clear Date</div>
						</div>
					</div>
				
					<% if current_user.admin? || current_user.company_admin? || current_user.uber_admin? %>
					<div class="col-xs-6" style="text-align:center">
						<h4>Completion Date</h4>
					
						<div class="input-append date row" data-date-format="dd-mm-yyyy">
							<%= f.text_field :completed_date, :value => parse_date(f.object.completed_date), :placeholder => Time.now.strftime("%m/%d/%Y"), :class =>"date-input", :id => "dp-completed" %>
							<div id="clear-completed-date"> Clear Date</div>
						</div>
					</div>
				
				<% end %>
				</div>
			<% end %>

			<div class="button-container">
				<%= f.submit "Update", :class => "simple-btn" %>
				<%= link_to "Delete", phase_path(@phase), :method => :delete, :data => {:confirm => "Are you sure you want to delete this phase?"}, :class=>"simple-btn delete-link", :remote => true %>
			</div>
		<% end %>
	</div>
</div>

<% if @project %>
<script type="text/javascript">
	$(document).ready(function(){
		$("#dp,#dp-completed").datepicker();
		$('#clear-critical-date').on('click',function(){
			$('#dp').val('');
		});
		$('#clear-completed-date').on('click',function(){
			$('#dp-completed').val('');
		});
	});
</script>
<% end %>