<%= nested_form_for @category, :remote => true, :method => :post do |f| %>
	<%= f.hidden_field :phase_id, :value => @phase.id %>
	<div class="row">
		<div class="col-xs-10"><%= f.text_field :name, :placeholder => "Name the new category..." %></div>
		<%= f.submit "Add", :class => "simple-btn col-xs-2" %>
	</div>
<% end %>