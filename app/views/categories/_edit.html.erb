<div class="category-form container">
	<div class="border-box">
		<div class="row">
			<span class="col-xs-5 header-description"><h2><%= @category.phase.name %></h2></span>
		</div>
		<%= nested_form_for @category, :url => update_category_checklist_path(@category.phase.checklist, :category_id => @category.id), :remote => true, :method => :patch do |f| %>
			<div class="row">
				<h4 style="display:inline-block">Category Name</h4>
				<%= f.text_field :name %>
			</div>

			<% if @project %>
				<div class="row">
					<div class="col-xs-6" style="text-align:center">
						<h4>Milestone Date</h4>
						<div class="input-append date row" data-date-format="dd-mm-yyyy">
							<%= f.text_field :milestone_date, :value => parse_date(f.object.milestone_date), :placeholder => Time.now.strftime("%m/%d/%Y"), :class =>"date-input", :id => "dp" %>
							<div id="clear-critical-date"> Clear Date</div>
						</div>
					</div>
				
					<% if current_user.admin? || current_user.company_admin? || current_user.uber_admin? %>
					<div class="col-xs-6" style="text-align:center">
						<h4>Completion Date</h4>
					
						<div class="input-append date row" data-date-format="dd-mm-yyyy">
							<%= f.text_field :completed_date, :value => parse_date(f.object.completed_date), :placeholder => Time.now.strftime("%m/%d/%Y"), :class =>"date-input", :id => "dp-completed" %>
							<div id="clear-completed-date"> Clear Date</div>
						</div>
					</div>
				<% end %>
				</div>
			<% end %>

			<div class="button-container">
				<%= f.submit "Update", :class => "simple-btn remote save" %>
		<% end %>
				<div style="">
					<%= link_to "Delete", destroy_category_checklist_path(@category.phase.checklist, :category_id => @category), :method => :delete, :data => {:confirm => "Are you sure you want to delete this category?"}, :class=>"btn btn-danger btn-md remote", :remote => true %>
				</div>
			</div>
	</div>
</div>