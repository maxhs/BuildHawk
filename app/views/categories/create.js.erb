$('.new_category').fadeOut(170,function(){
	$(this).remove();
	<% if @category.checklist.project %>
		$('#new-phase').before('<%= j render partial:"projects/phase", locals:{:c => @category} %>');
	<% else %>
		$('#new-phase').before('<%= j render partial:"admin/phase", locals:{:c => @category} %>');
	<% end %>
	$('#new-phase').text("Add a new phase");
});

