if ($('#<%=@phase.id%>-items .new_category').length){
	$('#<%=@phase.id%>-items .new_category').fadeOut(200,function(){
		$(this).remove();
		$('#new-category-<%=@phase.id%>').text("Add a new category");
	});

} else {
	var newDiv = $('<%= j render partial:"categories/new" %>').css('display','none');
	$('#new-category-<%=@phase.id%>').before(newDiv);
	newDiv.fadeIn(200);
	$('#new-category-<%=@phase.id%>').text("Cancel");
}
