var newDiv = $('<%= j render partial:"categories/new" %>').css('display','none');
$('#new-category-<%=@phase.id%>').before(newDiv);
$('#new-category-<%=@phase.id%>').hide();
newDiv.fadeIn(230);
$('#dismiss-new-category').click(function(){
	newDiv.slideUp(230,function(){
		newDiv.remove();
	});
	$('#new-category-<%=@phase.id%>').show();
});