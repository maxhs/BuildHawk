<div class="border-box">
	<div id="upload-core">
		<%= form_for Checklist.new, :url => upload_template_uber_admin_index_path, :multipart => true, method: :post do |f| %>
			<div>
				<h3>Upload a New Core Checklist</h3>
				<div style="text-align:center;width:200px;margin:2.5% auto;"><%= f.file_field :file %></div>
			</div>
		<% end %>
	</div>

	<table class="core-checklist-table" style="padding:20px;">
		<% if @checklists && @checklists.count > 0 %>
			<thead>
				<th><h5>Name</h5></th>
				<th><h5># Phases</h5></th>
				<th><h5># Categories</h5></th>
				<th><h5># Items</h5></th>
				<th><h5>Edit</h5></th>
				<th><h5>Delete</h5></th>
			</thead>
			<tbody>
				<%= render :partial => "uber_admin/checklist_row", collection: @checklists, :as => :c, cache: false %>
			</tbody>
		<% else %>
			<tr><td>You don't have any available checklists. You'll need to create a checklist template in order to add projects.</td></tr>
		<% end %>
	</table>
</div>