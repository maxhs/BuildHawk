$('a').removeClass('current-page');

var nav = $('<%= j render partial: "uber_admin/top_nav" %>');
$('#navigation').fadeOut(170,function(){
	$(this).html(nav);
	$(this).fadeIn(170);
});


$('#pagescontainer').fadeOut(170,function(){
	$(this).html('<%= j render :partial => "index" %>');
	$('#projects-tab').text("Menu");
	$(this).fadeIn(170,function(){
		closeMenu();
	});
	$("html, body").animate({ scrollTop: 0 }, 300);
	$('#nav-uber-admin a').addClass('current-page');
	$('#uber-admin-companies-link').addClass('current-page');
});
mixpanel.track("Uber admin");