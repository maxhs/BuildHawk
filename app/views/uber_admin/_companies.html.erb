<table class="table table-bordered table-responsive" id="users">
	<% if @companies && @companies.count > 0 %>
		<thead>
			<tr>
				<th style="width: 100px;">Photo</th>
				<th>Company Name</th>
				<th>Projects</th>
				<th>Users</th>
				<th>Created On</th>
			</tr>
		</thead>

		<tbody>
			<% @companies.each do |company| %>
				<tr>
					<td><% if company.photos && company.photos.count > 0 %><%= image_tag company.photos.first.image.url(:thumb), :class =>"uber-admin-company-pic" %><% end %></td>
					<td><%= company.name %></td>
					<td><%= company.projects.count %></td>
					<td><%= company.users.count %></td>
					<td><%= parse_time company.created_at %></td>
				</tr>
			<% end %>
	</tbody>
	<% else %>
		<tr><td>No companies</td></tr>
	<% end %>
</table>