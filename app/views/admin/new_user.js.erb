$('.sidebarProjects div a').removeClass('current-page');
$('#new-user-link').addClass('current-page');
$('#pages').fadeOut(100,function(){
	$(this).html('<%= j render :partial => "new_user", :locals => {:user => @user } %>');
	$(this).fadeIn(100);
	$("html, body").animate({ scrollTop: 0 }, 300);
});