$('#navigation a').removeClass('current-page');
$('#admin-checklists-link').addClass('current-page');
$('#main').html('<%= j render :partial => "checklists", :locals => {:checklists => @checklists } %>');
$("html, body").animate({ scrollTop: 0 }, 0);

<% if @response_message %>
	$('#alert').text("<%= @response_message %>").delay(3000).fadeOut(500, function(){
		$(this).text("");
	});
<% end %>