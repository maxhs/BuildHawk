$('.sidebarProjects div a').removeClass('current-page');
$('#admin-checklists-link').addClass('current-page');
$('#pages').fadeOut(100,function(){
	$(this).html('<%= j render :partial => "checklists", :locals => {:checklists => @checklists } %>');
	$(this).fadeIn(100);
	$("html, body").animate({ scrollTop: 0 }, 300);
});
<% if @response_message %>
	$('#alert').text("<%= @response_message %>").delay(3000).fadeOut(500, function(){
		$(this).text("");
	});
<% end %>