$('.sidebarAdmin div a').removeClass('current-page');
$('#admin-checklists-link').addClass('current-page');
$('#pages').fadeOut(100,function(){
	$(this).html('<%= j render :partial => "admin/editor", :locals => {:checklist => @checklist } %>');
	$(this).fadeIn(100);
	$("html, body").animate({ scrollTop: 0 }, 300);
});