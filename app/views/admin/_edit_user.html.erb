<table id="edit-user-form">
	
	<%= nested_form_for @user, :url => update_user_admin_path(@user), :multipart => true, :method => :put do |f| %>
		<tbody>
			<tr><td><h2>Edit User</h2></td></tr>
			<%= hidden_field_tag :company_id, :value => current_user.company.id %>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
			<tr><td><%= f.text_field :first_name, :placeholder => "First name", :class=>"tt-hint form-control" %></td></tr>
			<tr><td><%= f.text_field :last_name, :placeholder => "Last name", :class=>"tt-hint form-control" %></td></tr>
			<tr><td><%= f.email_field :email, :placeholder => "Email address", :class=>"tt-hint form-control" %></td></tr>
			<tr><td><%= f.text_field :phone_number, :placeholder => "Phone number", :class=>"tt-hint form-control" %></td></tr>
			<tr><td><%= f.password_field :password, :placeholder => "Password (only required if changing)", :class=>"tt-hint form-control" %></td></tr>
			<tr><td><%= f.password_field :password_confirmation, :placeholder => "Confirm password (only required if changing)", :class=>"tt-hint form-control" %></td></tr>
			<tr><td style="padding:14px 0 0;">Admin <%= f.check_box :admin %></td></tr>
			<tr><td style="padding:14px 0 0;">Email Permissions? <%= f.check_box :email_permissions %></td></tr>
			<tr><td style="padding:14px 0 0;">Push Permissions? <%= f.check_box :push_permissions %></td></tr>
			<tr><td><button class="btn btn-success btn-md pull-right"><%= f.submit "Save" %></button></td></tr>
			<tr><td><%= link_to "Delete User", delete_user_admin_path(@user), :method => :delete, :data => {:confirm => "Are you sure you want to delete this user?"}, :style=>"float:right;clear:both;padding:15px;" %></td></tr>
		</tbody>
	<% end %>
</table>