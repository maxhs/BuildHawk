<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript">
	$(document).ready(function() {
		$('#payment-form').submit(function(event) {
		    var form = $(this);
		    form.find('button').prop('disabled', true);
		    Stripe.setPublishableKey('pk_test_23emORqBWZz8YhjkR2vsXjSm');
		    var token = Stripe.card.createToken(form, stripeResponseHandler);
		    event.preventDefault();
		    return false;
		});
	});
</script>
<div id="billing" class="border-box" style="padding-top:20px">
	<div id="edit-billing-container" class="border-box">
		<h2 style="text-align:center;">Update Billing Information</h2>
		<%= form_tag update_billing_admin_path(@company), method: :patch, :id=>"payment-form", remote:true do %>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
		  	<span class="payment-errors"></span>

		  	<div class="form-row">
		    	<label>
		      		<span>Card Number</span>
		     		<input type="text" size="20" data-stripe="number" class="card-info"/>
		    	</label>
		    	<label>
		      		<span>CVC</span>
		      		<input type="text" size="4" data-stripe="cvc"/>
		    	</label>
		 	 </div>

		  	<div class="form-row">
		    	<label>
		      		<span>Expiration (MM/YYYY)</span>
		      		<input type="text" size="2" data-stripe="exp-month"/>
		    	</label>
		    	<span> / </span>
		    	<input type="text" size="4" data-stripe="exp-year"/>
		  	</div>

		  	<div style="text-align:center;"><button class="btn btn-success btn-md"><%=submit_tag "Save"%></button></div>
		<% end %>	
	</div>
</div>