$('a').removeClass('current-page');
$('#nav-admin a').addClass('current-page');

var nav = $('<%= j render partial: "admin/top_nav" %>');
$('#navigation').fadeOut(170,function(){
	$(this).html(nav);
	$(this).fadeIn(170);
});

$('#pagescontainer').fadeOut(100,function(){
	$(this).html('<%= j render :partial => "index" %>');
	$(this).fadeIn(100,function(){
		closeMenu();
	});
	$("html, body").animate({ scrollTop: 0 }, 300);
});