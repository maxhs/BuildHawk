
<%= form_for @sub, :url => create_sub_admin_index_path(@sub), :method => :post, remote: true do |f| %>
	<table id="new-sub-form">
		<%= hidden_field_tag :company_id, :value => current_user.company.id %>
		<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
		<tr><td>
			<%= f.text_field :name, :placeholder => "Name", :class=>"tt-hint form-control" %>
		</td></tr>
		<tr><td>
			<%= f.text_field :contact_name, :placeholder => "Contact Name (optional)", :class=>"tt-hint form-control" %>
		</td></tr>
		<tr><td>
			<%= f.email_field :email, :placeholder => "Contact email address (optional)", :class=>"tt-hint form-control" %>
		</td></tr>
		<tr><td>
			<%= f.text_field :phone_number, :placeholder => "Contact phone number (optional)", :class=>"tt-hint form-control" %>
		</td></tr>
		<tr><td><%= f.submit "Create", :id=>"new-sub-button", :class => "btn btn-success btn-md pull-right" %></td></tr>
	</table>
<% end %>

<script>
	$('#new-sub-button').click(function(e){
		e.preventDefault();
		$('.new_sub').submit();
	});
</script>
