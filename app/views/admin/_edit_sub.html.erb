<table id="edit-user-form">
	
	<%= nested_form_for @sub, :url => update_sub_admin_path(@sub), :multipart => true, :method => :put do |f| %>
		<tbody>
			<tr><td><h2>Edit Subcontractor</h2></td></tr>
			<%= hidden_field_tag :company_id, :value => current_user.company.id %>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
			<tr><td><%= f.text_field :name, :placeholder => "Name", :class=>"tt-hint form-control" %></td></tr>
			<tr><td><%= f.text_field :contact_name, :placeholder => "Contact Name", :class=>"tt-hint form-control" %></td></tr>
			<tr><td><%= f.email_field :email, :placeholder => "Contact email address", :class=>"tt-hint form-control" %></td></tr>
			<tr><td><%= f.text_field :phone_number, :placeholder => "Contact phone number", :class=>"tt-hint form-control" %></td></tr>
			<tr><td><button class="btn btn-success btn-md pull-right"><%= f.submit "Save" %></button></td></tr>
			<tr><td><%= link_to "Remove", delete_sub_admin_path(@sub), :method => :delete, :data => {:confirm => "Are you sure you want to delete this subcontractor?"}, :style=>"float:right;clear:both;padding:15px;" %></td></tr>
		</tbody>
	<% end %>
</table>