
<% if item.status == "Completed" %>
	<div class="row checklist-item completed" id="item-<%=item.id%>">
<% elsif item.status == "Not Applicable" %>
	<div class="row checklist-item not-applicable" id="item-<%=item.id%>">
<% else %>
	<div class="row checklist-item" id="item-<%=item.id%>">
<% end %>

	<div class="col-md-8 checklist-body" style="margin-left:20px;margin-right:-20px;">
		<%= link_to item.body, checklist_item_path(item), :remote => true %>
	</div>
	
	<div class="col-md-2" style="text-align: center;">
		<%= link_to 'Edit', edit_checklist_item_path(item), :remote => true %>
	</div>
	<div class="col-md-2" style="text-align: center;">
		<%= link_to 'Delete', delete_item_project_path(item, :checklist_item_id => item.id), :data => {:confirm => "Are you sure you want to delete this checklist item?"}, :method => :delete, :class=>"delete-link", :remote => true %>
	</div>

</div>