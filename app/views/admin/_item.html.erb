
<% if item.status == "Completed" %>
	<li class="row checklist-item completed" id="item-<%=item.id%>">
<% elsif item.status == "Not Applicable" %>
	<li class="row checklist-item not-applicable" id="item-<%=item.id%>">
<% else %>
	<li class="row checklist-item" id="item-<%=item.id%>">
<% end %>

	<div class="col-xs-8 checklist-body" style="">
		<%= link_to item.body, checklist_item_path(item), remote: true %>
	</div>
	
	<div class="col-xs-2" style="text-align: center;">
		<%= link_to 'Edit', edit_checklist_item_path(item), :class => "empty-btn", :remote => true %>
	</div>
	<div class="col-xs-2" style="text-align: center;">
		<%= link_to checklist_item_path(item), method: :delete, data: {:confirm => "Are you sure you want to delete this checklist item?"}, :class => "simple-btn", :class=>"delete-link", style:"font-size:1.5em;", remote: true do %>
			<i class="fa fa-trash-o remote"></i>
		<% end %>
	</div>
</li>