<% unless @active_card %>
	$('#alert').css({'color':'#fff','background':'#cc0000'}).text("Please setup your billing preferences in order to create new projects").fadeIn(500).delay(4000).fadeOut(500, function(){
		$(this).css({'color':'#000','background':'#fff'}).text("");
	});
<% end %>

$('#navigation a').removeClass('current-page');
$('#billing-link').addClass('current-page');
$('#main').fadeOut(100,function(){
	$(this).html('<%= j render :partial => "billing" %>');
	$(this).fadeIn(100);
	$("html, body").animate({ scrollTop: 0 }, 300);
});