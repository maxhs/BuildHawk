<% unless @user.company.customer_token %>
	$('#alert').css({'color':'#fff','background':'#cc0000'}).text("Please setup your billing preferences in order to create new projects").fadeIn(500).delay(4000).fadeOut(500, function(){
		$(this).css({'color':'#000','background':'#fff'}).text("");
	});
<% end %>

$('#main').html('<%= j render :partial => "billing" %>');
$("html, body").animate({ scrollTop: 0 }, 0);

var stripeResponseHandler = function(status, response) {
	var form = $('#payment-form');
	if (response.error) {
	    form.find('.payment-errors').text(response.error.message);
	    form.find('button').prop('disabled', false);
	} else {
	    var token = response.id;
	    form.append($('<input type="hidden" name="stripeToken" />').val(token));
	    form.get(0).submit();
	}
};
