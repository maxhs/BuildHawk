<div class="admin-checklist-table border-box" style="padding:5px 20px 20px;">
	<h4 style="text-align:center"><%= @company.name %> Checklists</h4>
	<table id="core-checklists">
		<th><h5 class="label">Name</h5></th>
		<th><h5 class="label">Phases</h5></th>
		<th><h5 class="label">Categories</h5></th>
		<th><h5 class="label">Items</h5></th>
		<th><h5 class="label">Edit</h5></th>
		<th><h5 class="label">Delete</h5></th>
		<% if @checklists && @checklists.count > 0 %>
			<%= render :partial => "admin/checklist_row", collection: @checklists, :as => :c, locals:{:company => @company}, cache: true %>
	</table>
		<% else %>
	</table>
		<div id="admin-no-checklists" class="no-content placeholder font-smoothing">You don't have any core checklist templates, but you can create some for your company from the list below.</div>
	<% end %>
</div>
<hr>
<div class="admin-checklist-table standard-templates border-box">
	<h4 style="text-align:center">BuildHawk Standard Templates</h4>
	<table>
		<thead>
			<th><h5 class="label">Name</h5></th>
			<th><h5 class="label">Description</h5></th>
			<th><h5 class="label">Phases</h5></th>
			<th><h5 class="label">Categories</h5></th>
			<th><h5 class="label">Items</h5></th>
			<th><h5 class="label">Use</h5></th>
		</thead>
		<tbody>
			<tr class="core-checklist-row">
				<td><h5>Blank Template</h5></td>
				<td class="checklist-description">This is a fully customizable, blank checklist template.</td>
				<td>1</td>
				<td>1</td>
				<td>1</td>
				<td><h5><%= link_to "Use", create_blank_template_admin_index_path(company_id: current_user.company.id, name: "Blank Template"), :class=>"remote simple-btn", method: :post, remote: true %></h5></td>
			</tr>
			<%= render :partial => "admin/core_checklist_row", collection: @uber_checklists, as: :c, cache: true %>
		</tbody>
	</table>
</div>

<div class="no-content placeholder font-smoothing">Have a checklist you'd like to upload from Excel?<br><%= mail_to "info@BuildHawk.com", "Contact us", encode: "javascript", :id => "contact-link" %> for more info.</div>
<script>
	coreChecklist();
</script>