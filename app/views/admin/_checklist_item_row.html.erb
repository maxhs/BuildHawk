<% if item.order_index == 0 %>
	<% s = item.category %>
	<% if s.order_index == 0 %>
		<% p = s.phase %>
		<div class="phase">
			<h1 style="display:inline-block"><%=p.name%></h1>
			<%= link_to "Edit Phase", phase_checklist_path(item.checklist, :phase_id => p.id), :style=>"margin-left:20px;", :remote => true %>
		</div>
	<% end %>
	<div class="category">
		<h3 style="display:inline-block"><%=p.name%></h3>
		<%= link_to subcategory_checklist_path(item.checklist, :subcategory_id => s.id), :style=>"margin-left:20px;", remote: true do %>
			<i class="fa fa-cog remote"></i>
		<% end %>	
	</div>
	<div id="sub-<%=s.id%>">
<% end %>

<%= link_to edit_checklist_item_path(item), :class => "remote", :remote => true do %>
	<div class="row checklist-item" id="item-<%=item.id%>">
		<div class="col-xs-6 checklist-body" style="margin-left:20px;margin-right:-20px;">
			<%=item.body%>
		</div>

		<div class="col-xs-2" style="text-align: center;">
			<% if item.critical_date %>
				<%= parse_date item.critical_date %>
			<% else %>
				&nbsp;
			<% end %>
		</div>

		<div class="col-xs-2" style="text-align: center;">
			<% if item.completed_date %>
				<%= parse_date item.completed_date %>
			<% else %>
				&nbsp;
			<% end %>
		</div>

		<div class="col-xs-1" style="text-align: center;">
			Edit
		</div>
		<% end %>
		<div class="col-xs-1" style="text-align: center;">
			<%= link_to checklist_item_path(item), method: :delete, data: {confirm: "Are you sure you want to delete this checklist item?"}, remote: true do %>
				<i class="fa fa-trash-o remote"></i>
			<% end %>
		</div>
	</div>


<% if item == item.category.checklist_items.last %>
		<%= link_to "New Checklist Item", new_checklist_item_checklist_path(item.checklist, category_id: item.category.id, item_index: item.item_index), id:"new-item-#{item.category.id}", :class=>"remote new-checklist-item", remote: true %>
	</div><!-- end subcategory -->
<% end %>