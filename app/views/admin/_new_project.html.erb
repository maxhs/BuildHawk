<%= nested_form_for @project, :url => projects_path, :method => :post, :remote => true do |f| %>
	<div class="border-box new-project" id="new-project">
		<h2 style="text-align:center;padding-bottom:15px;">Create a New Project</h2>
		<%= f.hidden_field :company_id, :value => current_user.company.id %>
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
		
		<%= f.fields_for :address do |a| %>
			<div class="row">
				<div class="col-xs-3"><h4>Name:</h4></div>
				<div class="col-xs-9"><%= f.text_field :name, :placeholder => "Project name" %></div>
			</div>
			<div class="row">
				<div class="col-xs-3"><h4>Street:</h4></div>
				<div class="col-xs-9"><%= a.text_field :street1 , :placeholder => "Street address" %></div>
			</div>
			<div class="row">
				<div class="col-xs-3"><h4>City:</h4></div>
				<div class="col-xs-9"><%= a.text_field :city , :placeholder => "City" %></div>
			</div>
			
			<div class="row">
				<div class="col-xs-3"><h4>State:</h4></div>
				<div class="col-xs-9"><%= a.text_field :state , :placeholder => "State" %></div>
			</div>
			
			<div class="row">
				<div class="col-xs-3"><h4>Zip:</h4></div>
				<div class="col-xs-9"><%= a.text_field :zip , :placeholder => "Zip" %></div>
			</div>

		<% end %>
		<div class="row" style="padding:10px 0;">
			<div class="col-xs-3"><h4>Checklist:</h4></div>
			<div class="col-xs-9" style="position:relative;top:7px;"><%= select_tag :checklist_id, options_from_collection_for_select(@checklists,  :id, :name) %></div>
		</div>

        <div class="row personnel">
        	<div class="col-xs-3"><h4>Users:</h4></div>
        	<div class="col-xs-9">
        		<%= @users.count %>
				<%= select_tag :users, options_for_select(@users.map{|u| [u.full_name, u.id]}.unshift("")), :id=>"users-select", style:"padding-bottom:5px;" %>
	    	</div>
        </div>
         <div class="row personnel">
        	<div class="col-xs-3">
        		<h4>Subs:</h4>
        	</div>
        	<div class="col-xs-3" id="sub-list">
				<% @subs.each do |company_sub| %>
	    			<% if @project.companies.include?(company_sub.subcontractor) %>
	    				<div style="padding-top:5px;"><%= check_box_tag "project[company_ids][]", company_sub.subcontractor.id, checked: true %><span style="padding-left:10px;"><%= sub.name %></span></div>
    				<% else %>
    					<div style="padding-top:5px;"><%= check_box_tag "project[company_ids][]", company_sub.subcontractor.id %><span style="padding-left:10px;"><%= company_sub.subcontractor.name %></span></div>
    				<% end %>
	    		<% end %>
	    	</div>
	    	<div class="col-xs-6" id="add-sub-section">
        		
        	</div>
        </div>
		<div class="button-container">
			<%= f.submit "CREATE PROJECT", :id=>"new-project-submit", :class => "simple-btn" %>
		</div>
	</div>
<% end %>

<script>
	newProjectSetup();
	$('#users-select').select2({
		placeholder: "Add personnel to the project"
	});
</script>