<%= nested_form_for @project, :url => create_project_admin_index_path(@project), :method => :post, :remote => true do |f| %>
	<div class="border-box">
		<div id="new-project-form">
			<h2 style="text-align:center;">New Project</h2>
			<%= f.hidden_field :company_id, :value => current_user.company.id %>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
			
			<%= f.fields_for :address do |a| %>
				<div class="row">
					<div class="col-xs-2"><h4>Name:</h4></div>
					<div class="col-xs-10"><%= f.text_field :name, :placeholder => "Project name" %></div>
				</div>
				<div class="row">
					<div class="col-xs-2"><h4>Street:</h4></div>
					<div class="col-xs-10"><%= a.text_field :street1 , :placeholder => "Street address" %></div>
				</div>
				<div class="row">
					<div class="col-xs-2"><h4>City:</h4></div>
					<div class="col-xs-10"><%= a.text_field :city , :placeholder => "City" %></div>
				</div>
				
				<div class="row">
					<div class="col-xs-2"><h4>State:</h4></div>
					<div class="col-xs-10"><%= a.text_field :state , :placeholder => "State" %></div>
				</div>
				
				<div class="row">
					<div class="col-xs-2"><h4>Zip:</h4></div>
					<div class="col-xs-10"><%= a.text_field :zip , :placeholder => "Zip" %></div>
				</div>

			<% end %>
			<div class="row" style="padding:10px 0;">
				<div class="col-xs-2"><h4>Checklist:</h4></div>
				<div class="col-xs-10" style="position:relative;top:7px;"><%= f.select :checklist, options_for_select(current_user.company.checklists.map(&:name)) %></div>
			</div>

	        <div class="row personnel">
	        	<div class="col-xs-2"><h4>Users:</h4></div>
	        	<div class="col-xs-10">
					<% @users.each do |user| %>
		    			<% if @project.users.include?(user) %>
		    				<div style="padding-top:5px;"><%= check_box_tag "project[user_ids][]", user.id, checked: true %><span style="padding-left:10px;"><%= user.full_name %></span></div>
	    				<% else %>
	    					<div style="padding-top:5px;"><%= check_box_tag "project[user_ids][]", user.id %><span style="padding-left:10px;"><%= user.full_name %></span></div>
	    				<% end %>
		    		<% end %>
		    	</div>
	        </div>
	         <div class="row personnel">
	        	<div class="col-xs-2"><h4>Subs:</h4></div>
	        	<div class="col-xs-10">
					<% @subs.each do |sub| %>
		    			<% if @project.subs.include?(sub) %>
		    				<div style="padding-top:5px;"><%= check_box_tag "project[sub_ids][]", sub.id, checked: true %><span style="padding-left:10px;"><%= sub.name %></span></div>
	    				<% else %>
	    					<div style="padding-top:5px;"><%= check_box_tag "project[sub_ids][]", sub.id %><span style="padding-left:10px;"><%= sub.name %></span></div>
	    				<% end %>
		    		<% end %>
		    	</div>
	        </div>
			<div><button class="btn btn-success btn-lg pull-right"><%= f.submit "Create", :id=>"new-project-submit" %></button></div>
		</div>
	</div>
<% end %>