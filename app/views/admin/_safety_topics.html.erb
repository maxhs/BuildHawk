<div id="pages" class="page border-box">
	<h3 style="text-align:center;"> Standard Topics </h3>
	<div id="uber-safety-topics">
		<div class="row" style="border-bottom:1px solid #ddd;">
			<div class="col-xs-3"><h5>Topic</h5></div>
			<div class="col-xs-9"><h5>Description</h5></div>
		</div>
		<% if @uber_topics && @uber_topics.count > 0 %>
			<%= render partial:"admin/topic", collection: @uber_topics, as: :topic, cache: true %>
		<% else %>
			<div class="no-contents-placeholder font-smoothing">No standard safety topics</div>
		<% end %>
	</div>
	
	<div id="admin-safety-topics" style="padding-top:30px;">
		<h3 style="text-align:center;"> Company Topics </h3>
		<div class="row" style="border-bottom:1px solid #ddd;">
			<div class="col-xs-3"><h5>Topic</h5></div>
			<div class="col-xs-6"><h5>Description</h5></div>
			<div class="col-xs-3" style="text-align:center;"><h5>Edit</h5></div>
		</div>
		<div id="topics">
			<% if @safety_topics && @safety_topics.count > 0 %>
				<%= render partial:"safety_topics/topic", collection: @safety_topics, as: :topic, cache: true %>
			<% else %>
				<div class="no-content placeholder font-smoothing">No safety topics</div>
			<% end %>
		</div>
		<%= render partial:"safety_topics/new", locals: {safety_topic: SafetyTopic.new} %>
	</div>
</div>

<script>
	readMoreLess();
</script>