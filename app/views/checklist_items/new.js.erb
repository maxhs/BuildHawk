if ($('#subcategory-<%= @subcategory.id %> .new_checklist_item').length){
	$('#subcategory-<%= @subcategory.id %> .new_checklist_item').fadeOut(200,function(){
		$(this).remove();
	});
	$('#new-item-<%=@subcategory.id %>').text("Add new item");
} else {
	$('#items-<%= @subcategory.id %>').append('<%= j render partial:"checklist_items/new" %>');
	$('#new-item-<%=@subcategory.id %>').text("Cancel");
}