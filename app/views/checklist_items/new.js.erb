$('#items-<%= @category.id %>').append('<%= j render partial:"checklist_items/new" %>');
$('#new-item-<%= @category.id %>').hide();

$('#dismiss-new-item').click(function(){
	$('.new_checklist_item').slideUp(230,function(){
		$('.new_checklist_item').remove();
	});
	$('#new-item-<%= @category.id %>').show();
});