if ($('#category-<%= @category.id %> .new_checklist_item').length){
	$('#category-<%= @category.id %> .new_checklist_item').fadeOut(200,function(){
		$(this).remove();
	});
	$('#new-item-<%=@category.id %>').text("Add new item");
} else {
	$('#items-<%= @category.id %>').append('<%= j render partial:"checklist_items/new" %>');
	$('#new-item-<%=@category.id %>').text("Cancel");
}