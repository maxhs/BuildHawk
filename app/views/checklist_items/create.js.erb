$('#new_checklist_item').fadeOut(200,function(){
	<% if @project %>
		$(this).replaceWith('<%= j render partial:"projects/item", :locals => {:item => @item} %>');
	<% else %>
		$(this).replaceWith('<%= j render partial:"admin/item", :locals => {:item => @item} %>');
	<% end %>
	<% if @category %>
		$('#category-<%= @category.id %> .completed-count').html('<%= j render partial:"checklists/completed_count", :locals => {:category => @category} %>');
	<% end %>
	$('.new-checklist-item').text("Add a new item");
	$(this).fadeIn(200);
});