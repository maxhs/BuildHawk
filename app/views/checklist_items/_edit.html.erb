<div class="border-box">
	<%= nested_form_for item, url: {controller: :checklist_items, action: :update, id: item.id, multipart: true}, remote: true, method: :post do |f| %>
		<div class="action-buttons">
			<div style="display:table-row">
				<div id="floating-save" class="action remote" type="submit">
					<i class="fa fa-floppy-o remote"></i>
				</div>
				<div id="export-checklist-item" class="action">
					<i class="fa fa-share"></i>
				</div>
				<% if current_user.admin || current_user.company_admin %>
					<%= link_to checklist_items_path(item), :data => {:confirm => "Are you sure you want to delete this item?"}, method: :delete, :class=>"remote action", remote: true do %>
						<i class="fa fa-trash-o remote"></i>
					<% end %>	
				<% end %>
				
				<div id="dismiss-item" class="dismiss action">
					<i class="fa fa-remove" id="dismiss-item"></i>
				</div>
			</div>
		</div>

		<div class="item-editor" class="border-box;" style="overflow:auto;">
			<div class="row">
				<h4>Phase:</h4><%= item.category.phase.name %>
			</div>
			<div class="row">
				<h4>Category:</h4><%= item.category.name %>
			</div>
			<div class="row">
				<h4>Type:</h4>"<%= item.item_type %>"
			</div>
			<div class="row">
				<h4>Item:</h4><%= f.text_area :body, :style => "width:100%;margin-bottom:14px;" %>
			</div>

			<div class="button-container">
				<%= f.submit "Update", :class => "simple-btn save" %>
	<% end %>
			<%= link_to checklist_item_path(item), data: {confirm: "Are you sure you want to delete this checklist item?"}, method: :delete, :style => "clear:both", remote: true do %>
				<i class="fa fa-trash-o remote", style="display:block;font-size:1.5em;margin-top:2.5%;" ></i>
			<% end %>
		</div>
	</div>

</div>
<script>
$('#dismiss-item').click(function(){
	dismissChecklist();
})
</script>