<%= nested_form_for safety_topic, remote: true, method: :post do |f| %>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<% if @company %>
		<%= f.hidden_field :company_id, value: @company.id %>
	<% elsif @user.uber_admin %>
		<%= f.hidden_field :core, value: true %>
	<% end %>
	<div class="row topic">
		<div class="col-xs-5">
			<%= f.label "Title" %>
			<%= f.text_field :title, placeholder: "Name the new safety topic..." %>
		</div>
		<div class="col-xs-5">
			<%= f.label "Description" %>
			<%= f.text_area :info, placeholder: "Describe the new safety topic..." %>
		</div>
		<div class="col-xs-2 center">
			<%= f.submit "Add", :class => "simple-btn remote", :style=>"margin-top:23%", remote: true %>
		</div>
	</div>
<% end %>