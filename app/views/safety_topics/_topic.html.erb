<div class="row topic" id="topic-<%= topic.id %>">
	<div class="col-xs-3"><h5><%= topic.title %></h5></div>
	<% if topic.info %>
		<% if topic.info.length > 130 %>
			<div class="col-xs-7 topic-description">
				<div class="info truncated"><%= truncate_html(topic.info, length:130) %></div>
				<div class="info full"><%= topic.info.html_safe %></div>
				<div class="read-more center empty-btn">Read more</div>
			</div>
		<% else %>
			<div class="col-xs-7 topic-description"><%= topic.info.html_safe %></div>
		<% end %>
	<% end %>
	<div class="col-xs-1 center">
		<%= link_to "Edit", edit_safety_topic_path(topic), :class => "simple-btn remote", :style => "text-align:center;margin:0;", remote: true %>
	</div>
	<div class="col-xs-1 center">
		<%= link_to safety_topic_path(topic), :class => "remote delete-safety-topic center", remote: true, method: :delete, data: {confirm: "Are you sure you want to delete this Safety Topic?" } do %>
			<i class="fa fa-trash-o remote"></i>
		<% end %>
	</div>
</div>