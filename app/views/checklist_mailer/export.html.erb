<h1 style="text-align:center;margin:0 auto;"><%= @project.name %> - Checklist Report</h1>
<h2 style="text-align:center;margin:10px auto 0px;text-align:left;"> <%= @checklist_item.subcategory.category.name %> </h2>
<h3 style="text-align:center;margin:0 auto;text-align:left;"> <%= @checklist_item.subcategory.name %> </h3>

<div style="margin:20px auto 10px;">
	<div><%= @checklist_item.body %></div>
	<div>
		<% if @checklist_item.critical_date %>
			<h4 style="display:inline-block;padding-right:20px;">Critical Date:</h4><%= @checklist_item.critical_date.strftime("%m/%d/%Y") %><br/>
		<% end %>
		<h4 style="display:inline-block;padding-right:20px;">Status:</h4><%= @checklist_item.status %>
	</div>
</div>

<% if @checklist_item.photos && @checklist_item.photos.count > 0 %>
	<h3>Photos:</h3>
	<div>
		<% @checklist_item.photos.each do |p| %>
			<% if p.image_file_name %>
				<%= link_to checklist_item_project_url(@project, :checklist_item_id => @checklist_item.id, :host => "www.buildhawk.com"), :style=>"float:left;margin:10px;" do %>
					<%= image_tag(p.image.url(:small), :style => "width:100px;display:block;") %> 
					<div style="text-align:center"><%= p.created_date %></div>
				<% end %>
			<% end %>
		<% end %>
	</div>
<% end %>
