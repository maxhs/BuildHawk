<div class="message" id="message-<%= message.id %>">
	<%= link_to message_user_message_path(message), method: :delete, data: {confirm: "Are you sure you want to hide this message?"}, remote: true do %>
		<i class="fa fa-remove remote"></i>
	<% end %>
	<div class="message-body"><%= message.body %></div>
	<div class="attribution font-smoothing pull-right">
		<div class="author">-<%= message.author.full_name if message.author %></div>
		<div class="timestamp"><%= parse_datetime message.created_at %></div>
	</div>
</div>