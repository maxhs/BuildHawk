var originalGroup = $('#pg-<%= @project_group.id %> .group-header').html();
$('#pg-<%=@project_group.id%> .group-header').fadeOut(230,function(){
	$(this).html('<%= j render partial:"project_groups/edit", :locals => {:project_group => @project_group} %>');
	$(this).fadeIn(230,function(){
		$('#edit-group-name').focus();
	});
	$('#cancel-group').click(function(){
		$('#pg-<%=@project_group.id%> .group-header').fadeOut(230,function(){
			$(this).html(originalGroup);
			$(this).fadeIn(230);
		})
	});
});