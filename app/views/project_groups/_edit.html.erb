<div id="<%= @project_group.id %>" class="project-group editing">
	<%= form_for @project_group, url: project_group_path(@project_group), method: :patch, remote: true do |f| %>
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
		<div class="col-xs-4" style="display:table">
			<%= button_tag(type: 'submit', :class=> "no-btn action-icon", title:"Save") do %>
		    	<i class="fa fa-floppy-o"></i>
		  	<% end %>
			<%= link_to project_group_path(project_group), :class=>"remote action-icon", title:"Delete", method: :delete, remote: true, id:"delete-group", data: {confirm:"Are you sure you want to delete this project group? Projects will not be deleted."} do %>
				<i class="fa fa-trash-o remote action-icon"></i>
			<% end %>
			<i class="fa fa-remove remote action-icon" title="Dismiss" id="cancel-group"></i>
		</div>
		<div class="col-xs-8">
			<%= f.text_field :name, id:'edit-group-name' %>
		</div>
	<% end %>
		
</div>