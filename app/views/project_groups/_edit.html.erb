		<%= form_for @project_group, url: project_group_path(@project_group), method: :patch, remote: true do |f| %>
		<div class="col-xs-4">
			<%= f.text_field :name %>
		</div>
		<div class="col-xs-2">
			&nbsp;
		</div>
		<div class="col-xs-2">
			&nbsp;
		</div>
			<div class="col-xs-2">
			<%= f.submit "Save", :class =>"simple-btn" %>
		<% end %>
			<%= link_to "Delete", :class =>"delete-link simple-btn" %>
		</div>
		
	</div>
</div>