<li class="project group new unsortable">
	<%= form_for project_group, method: :post, :class=>"remote", remote: true do |f| %>
		<%= hidden_field_tag :project_id, value: @project.id if @project %>
		<%= f.text_field :name, placeholder: "Group name" %>
		<%= f.submit "Create", :class=> "simple-btn" %>
		<span id="cancel-new-group"><i class="fa fa-remove"></i></span> 
	<% end %>
</li>