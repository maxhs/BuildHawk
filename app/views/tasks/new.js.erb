$("#project-tasks").addClass('panel');
$('#task.focus').html('<%= j render partial: "tasks/new", locals: {task: @task, tasks: @tasks, project: @project } %>');
$('.active-task').removeClass('active-task');
$('.faded').removeClass('faded');
$('#task.focus').css('left','50%');
$("html, body").delay(100).animate({ scrollTop: 0 }, 230); 
$('#task_location').autocomplete({
  	source: <%= raw @locations.to_json %>
});