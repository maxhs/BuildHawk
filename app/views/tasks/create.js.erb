<% if @tasklist.tasks.count == 1 %>
	$('#tasks').html("<%= j render partial:'tasks/row', locals:{task: @task} %>");
<% else %>
	$('#tasks').prepend("<%= j render partial:'tasks/row', locals:{task: @task} %>");
<% end %>
$('#task.focus').html('<%= j render partial:"tasks/edit", locals: {task: @task} %>');